@model IEnumerable<CloudCityCenter.Models.ViewModels.ProductCardVm>
@{
    ViewData["Title"] = "VPS Hosting";
}

<!-- HERO SECTION -->
<section class="vps-page-hero py-5 position-relative">
  <div class="vps-page-background"></div>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-2 order-md-1 animate-on-scroll" data-animation="fade-in-left">
        <div class="vps-page-image-wrapper">
          <div class="vps-icon-grid">
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-cpu"></i>
              </div>
              <span>Dedicated CPU</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-memory"></i>
              </div>
              <span>Isolated RAM</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-hdd-stack"></i>
              </div>
              <span>SSD Storage</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-shield-lock"></i>
              </div>
              <span>Secure</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 order-1 order-md-2 animate-on-scroll" data-animation="fade-in-right">
        <div class="section-badge mb-3">
          <span class="badge-text">VPS</span>
        </div>
        <h1 class="display-4 fw-bold mb-4 vps-page-title">
          <span class="text-gradient-2">VPS</span> <span class="text-primary">Hosting</span>
        </h1>
        <p class="vps-page-text mb-4" style="font-size: 1.1rem; line-height: 1.8; color: #555;">
          VPS (Virtual Private Server) is a virtual dedicated server that combines the advantages of renting a physical server with the convenience of cloud technologies. Each customer receives their own isolated space with dedicated resources â€” processor, RAM, disk space, and root access.
        </p>
        <div class="vps-features mb-4">
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>Dedicated resources & full root access</span>
          </div>
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>SSD storage, enterprise-grade hardware</span>
          </div>
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>24/7 expert support</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- VPS PLANS SECTION -->
<section class="container my-5">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <h2 class="display-5 fw-bold mb-3">VPS Plans</h2>
      <p class="lead text-muted">Choose the perfect VPS solution for your needs</p>
    </div>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 animate-on-scroll" data-animation="fade-in-up">
                <div class="card h-100 vps-product-card">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

