@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model CloudCityCenter.Models.ViewModels.VPSPageVm
@{
    ViewData["Title"] = Localizer["Title"];
}

<!-- HERO SECTION -->
<section class="vps-page-hero py-5 position-relative">
  <div class="vps-page-background"></div>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-2 order-md-1 animate-on-scroll" data-animation="fade-in-left">
        <div class="vps-page-image-wrapper">
          <div class="vps-icon-grid">
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-cpu"></i>
              </div>
              <span>@Localizer["DedicatedCPU"]</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-memory"></i>
              </div>
              <span>@Localizer["IsolatedRAM"]</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-hdd-stack"></i>
              </div>
              <span>@Localizer["SSDStorage"]</span>
            </div>
            <div class="vps-icon-item">
              <div class="vps-icon-circle">
                <i class="bi bi-shield-lock"></i>
              </div>
              <span>@Localizer["Secure"]</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 order-1 order-md-2 animate-on-scroll" data-animation="fade-in-right">
        <div class="section-badge mb-3">
          <span class="badge-text">@Localizer["VPS"]</span>
        </div>
        <h1 class="display-4 fw-bold mb-4 vps-page-title">
          <span class="text-gradient-2">@Localizer["VPSHosting"]</span>
        </h1>
        <p class="vps-page-text mb-4" style="font-size: 1.1rem; line-height: 1.8; color: #555;">
          @Localizer["VPSDescription"]
        </p>
        <div class="vps-features mb-4">
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["DedicatedResources"]</span>
          </div>
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["SSDEnterprise"]</span>
          </div>
          <div class="vps-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["ExpertSupport"]</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- VPS PLANS SECTION -->
<section class="container my-5">
    <!-- FILTERS SECTION -->
    <div class="card mb-5 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>@Localizer["Filters"]</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold">@Localizer["CPU"] (@Localizer["Core"])</label>
                    <select id="filter-cpu" class="form-select vps-filter">
                        <option value="">@Localizer["All"]</option>
                        @foreach (var cpu in Model.AvailableCpuCores)
                        {
                            <option value="@cpu">@cpu</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold">@Localizer["RAM"] (@Localizer["GB"])</label>
                    <select id="filter-ram" class="form-select vps-filter">
                        <option value="">@Localizer["All"]</option>
                        @foreach (var ram in Model.AvailableRamGb)
                        {
                            <option value="@ram">@ram</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 col-lg-3">
                    <label class="form-label fw-bold">@Localizer["SSD"] (@Localizer["GB"])</label>
                    <select id="filter-ssd" class="form-select vps-filter">
                        <option value="">@Localizer["All"]</option>
                        @foreach (var ssd in Model.AvailableSsdGb)
                        {
                            <option value="@ssd">@ssd</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 col-lg-2">
                    <label class="form-label fw-bold">@Localizer["Traffic"]</label>
                    <select id="filter-traffic" class="form-select vps-filter">
                        <option value="">@Localizer["All"]</option>
                        @foreach (var traffic in Model.AvailableTraffic)
                        {
                            <option value="@traffic">@traffic</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 col-lg-1 d-flex align-items-end">
                    <button type="button" id="reset-filters" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle"></i> @Localizer["Reset"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <h2 class="display-5 fw-bold mb-3">@Localizer["VPSPlans"]</h2>
      <p class="lead text-muted">@Localizer["ChooseVPSSolution"]</p>
    </div>
    <div class="row g-4">
        @foreach (var plan in Model.Plans)
        {
            <div class="col-12 col-md-6 col-lg-4 vps-plan-item animate-on-scroll" 
                 data-animation="fade-in-up"
                 data-cpu="@plan.CpuCores"
                 data-ram="@plan.RamGb"
                 data-ssd="@plan.SsdGb"
                 data-traffic="@plan.Traffic">
                <div class="card h-100 vps-product-card shadow-sm">
                    @if (!string.IsNullOrEmpty(plan.ImageUrl))
                    {
                        <img src="@plan.ImageUrl" class="card-img-top" alt="@plan.Name" style="height: auto; max-height: 250px; width: 100%; object-fit: contain; padding: 1rem;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="text-center mb-3">
                            <h4 class="card-title fw-bold mb-2">@plan.Name</h4>
                        </div>
                        <ul class="list-unstyled flex-grow-1 mb-4">
                            <li class="mb-3">
                                <i class="bi bi-cpu text-primary me-2"></i>
                                <strong>@Localizer["CPU"]:</strong> @plan.CpuCores @Localizer["Core"]
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-memory text-primary me-2"></i>
                                <strong>@Localizer["RAM"]:</strong> @plan.RamGb @Localizer["GB"]
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-hdd-stack text-primary me-2"></i>
                                <strong>@Localizer["SSD"]:</strong> @plan.SsdGb @Localizer["GB"]
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-speedometer2 text-primary me-2"></i>
                                <strong>@Localizer["Traffic"]:</strong> @plan.Traffic
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <strong>@Localizer["Country"]:</strong> @plan.Country
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-ubuntu text-primary me-2"></i>
                                <strong>@Localizer["OS"]:</strong> @plan.OS
                            </li>
                        </ul>
                        <div class="mt-auto">
                            <div class="text-center mb-3">
                                <span class="display-6 fw-bold text-primary">$@plan.Price</span>
                                <span class="text-muted">/ @Localizer["Month"]</span>
                            </div>
                            <form asp-controller="Cart" asp-action="Add" method="post" class="add-to-cart-form" data-ajax="true">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@plan.ProductId" />
                                @if (plan.ProductVariantId.HasValue)
                                {
                                    <input type="hidden" name="productVariantId" value="@plan.ProductVariantId" />
                                }
                                <button type="submit" class="btn btn-primary w-100">@Localizer["Order"]</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .vps-product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
    }

    .vps-product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.15) !important;
    }

    .vps-product-card .card-body {
        padding: 2rem;
    }

    .vps-product-card .card-title {
        color: #0d6efd;
        font-size: 1.5rem;
    }

    .vps-product-card ul li {
        padding: 0.5rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .vps-product-card ul li:last-child {
        border-bottom: none;
    }

    .vps-product-card .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .vps-product-card .btn-primary:hover {
        background-color: #0b5ed7;
        transform: scale(1.02);
    }
    
    .vps-plan-item {
        transition: opacity 0.3s ease, transform 0.3s ease;
    }
    
    .vps-plan-item.hidden {
        display: none !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filters = {
            cpu: document.getElementById('filter-cpu'),
            ram: document.getElementById('filter-ram'),
            ssd: document.getElementById('filter-ssd'),
            traffic: document.getElementById('filter-traffic')
        };
        
        const resetButton = document.getElementById('reset-filters');
        const planItems = document.querySelectorAll('.vps-plan-item');
        
        function applyFilters() {
            const selectedCpu = filters.cpu ? filters.cpu.value : '';
            const selectedRam = filters.ram ? filters.ram.value : '';
            const selectedSsd = filters.ssd ? filters.ssd.value : '';
            const selectedTraffic = filters.traffic ? filters.traffic.value : '';
            
            let visibleCount = 0;
            
            planItems.forEach(function(item) {
                const itemCpu = item.getAttribute('data-cpu') || '';
                const itemRam = item.getAttribute('data-ram') || '';
                const itemSsd = item.getAttribute('data-ssd') || '';
                const itemTraffic = item.getAttribute('data-traffic') || '';
                
                let show = true;
                
                // Проверяем каждый фильтр только если он выбран
                if (selectedCpu && selectedCpu.trim() !== '') {
                    if (itemCpu.trim() !== selectedCpu.trim()) {
                        show = false;
                    }
                }
                
                if (selectedRam && selectedRam.trim() !== '') {
                    if (itemRam.trim() !== selectedRam.trim()) {
                        show = false;
                    }
                }
                
                if (selectedSsd && selectedSsd.trim() !== '') {
                    if (itemSsd.trim() !== selectedSsd.trim()) {
                        show = false;
                    }
                }
                
                if (selectedTraffic && selectedTraffic.trim() !== '') {
                    if (itemTraffic.trim() !== selectedTraffic.trim()) {
                        show = false;
                    }
                }
                
                if (show) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                    item.style.display = 'none';
                }
            });
        }
        
        // Добавляем обработчики событий для всех фильтров
        if (filters.cpu) {
            filters.cpu.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.ram) {
            filters.ram.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.ssd) {
            filters.ssd.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.traffic) {
            filters.traffic.addEventListener('change', function() {
                applyFilters();
            });
        }
        
        // Обработчик для кнопки сброса
        if (resetButton) {
            resetButton.addEventListener('click', function() {
                // Сбрасываем все фильтры
                Object.values(filters).forEach(function(filter) {
                    if (filter) {
                        filter.value = '';
                    }
                });
                
                // Показываем все элементы явно
                planItems.forEach(function(item) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                });
            });
        }
    });
</script>
