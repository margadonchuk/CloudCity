@model IEnumerable<CloudCityCenter.Models.ViewModels.ProductCardVm>
@{
    ViewData["Title"] = "VPN Tunneling";
}

<section id="vpn-hero">
  <!-- Картинка сверху -->
  <div class="vpn-hero-img">
    <img src="/images/vpnhero.png" alt="VPN Tunneling" class="img-fluid w-100">
  </div>

  <!-- Текст -->
  <div class="container py-5">
    <h1 class="fw-bold mb-4">VPN Tunneling</h1>
    <p class="lead text-muted">
      A VPN (Virtual Private Network) is a technology that provides a secure connection over the Internet. 
      It hides your real IP address, encrypts all traffic, and allows you to work safely even on public Wi-Fi networks. 
      A VPN is necessary to protect personal data, bypass blocks, maintain privacy, and ensure business security.
    </p>

    <h3 class="mt-5">Highlights</h3>
    <ul>
      <li>Encrypted traffic end-to-end</li>
      <li>Stable cross-region connectivity</li>
      <li>Easy management & monitoring</li>
    </ul>
  </div>
</section>

<section class="container py-5">
    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100 shadow text-center">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<!-- Payments section -->
<section id="payments" class="container py-5">
  <h2 class="text-center fw-bold display-6 mb-3">Choose Your Way to Pay</h2>

  <p class="lead text-muted text-center mb-4 mx-auto" style="max-width: 980px;">
    At CloudCity Center we know how important it is to stay flexible when it comes to payments.
    That’s why we support multiple options: Bank transfer, credit card, PayPal, or cryptocurrency —
    including BTC, ETH, USDT, Doge, and many more.
  </p>

  <!-- Icons -->
<section class="container py-4">
  <div class="payment-logos">
    <div class="pay-badge"><img src="/images/paypal.png"   alt="PayPal"></div>
    <div class="pay-badge"><img src="/images/card.png"     alt="Card"></div>
    <div class="pay-badge"><img src="/images/bitcoin.png"  alt="Bitcoin"></div>
    <div class="pay-badge"><img src="/images/ethereum.png" alt="Ethereum"></div>
    <div class="pay-badge"><img src="/images/bank.png"     alt="Bank transfer"></div>
    <div class="pay-badge"><img src="/images/tether.png"   alt="Tether"></div>
  </div>
</section>

<section id="datacenter-map" class="container-fluid py-5">
  <h2 class="text-center fw-bold mb-4">Our Global Data Centers</h2>


  <div class="text-center">
    <!-- Карта будет на всю ширину -->
    <img src="/images/worldmap.png" alt="CloudCity Center Data Centers Map" 
         class="img-fluid w-100">
  </div>
</section>




