@model CloudCityCenter.Models.ViewModels.HostingPageVm
@{
    ViewData["Title"] = Localizer["Title"];
}

<!-- HERO SECTION -->
<section class="hosting-page-hero py-5 position-relative">
  <div class="hosting-page-background"></div>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-2 order-md-1 animate-on-scroll" data-animation="fade-in-left">
        <div class="hosting-page-image-wrapper">
          <img src="/images/webhosting.png" alt="Web Hosting" class="hosting-page-image" />
          <div class="image-overlay"></div>
        </div>
      </div>
      <div class="col-md-6 order-1 order-md-2 animate-on-scroll" data-animation="fade-in-right">
        <div class="section-badge mb-3">
          <span class="badge-text">@Localizer["Hosting"]</span>
        </div>
        <h1 class="display-4 fw-bold mb-4 hosting-page-title">
          <span class="text-gradient-2">@Localizer["WebHosting"]</span>
        </h1>
        <p class="hosting-page-text mb-4" style="font-size: 1.1rem; line-height: 1.8; color: #555;">
          @Localizer["HostingDescription"]
        </p>
        <div class="hosting-features mb-4">
          <div class="hosting-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["CustomDesign"]</span>
          </div>
          <div class="hosting-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["SupportLanguages"]</span>
          </div>
          <div class="hosting-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["BackupsSEO"]</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- HOSTING PLANS SECTION -->
<section class="container py-5">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-up">
      <h2 class="display-5 fw-bold mb-4">@Localizer["HostingPlans"]</h2>
      
      <!-- –û–ø–∏—Å–∞–Ω–∏–µ —É—Å–ª—É–≥ —Å –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–æ–π —Ü–µ–Ω–æ–π -->
      <div class="hosting-description-box mb-5 animate-on-scroll" data-animation="fade-up">
        <p class="hosting-description-text mb-0" style="font-size: 1.1rem; line-height: 1.8; color: #555;">
          @Localizer["HostingDescriptionText"] 
          <span class="hosting-additional-price">@Localizer["HostingAdditionalPrice"]</span>
        </p>
      </div>
    </div>
    <div class="row g-4">
        @foreach (var item in Model.HostingPlans)
        {
            <div class="col-12 col-md-6 col-lg-4 animate-on-scroll" data-animation="fade-in-up">
                <div class="card h-100 hosting-product-card">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<!-- STORAGE SECTION -->
<section class="container py-5 position-relative">
  <div class="hosting-page-background"></div>
  <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
