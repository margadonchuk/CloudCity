@model CloudCityCenter.Models.ViewModels.HostingPageVm
@{
    ViewData["Title"] = "Web Hosting";
}

<section id="web-hosting" class="container my-5">
  <!-- Картинка сверху -->
  <div class="text-center mb-4">
    <img src="/images/webhosting.png" alt="Web Hosting" class="img-fluid rounded shadow">
  </div>

  <!-- Заголовок и текст -->
  <h2 class="fw-bold">Web Hosting</h2>
  <p>
    Web Hosting is the foundation of your online presence, providing reliable and fast solutions 
    for websites of any size. At <b>CloudCity Center</b>, we focus on speed, security, and 
    convenience — using the latest technologies to deliver the best hosting experience.
  </p>

  <!-- Подзаголовок и преимущества -->
  <h4>Highlights</h4>
  <ul>
    <li>Custom design, functionality & high bandwidth</li>
    <li>Support for C#, Python, PHP, and popular website builders</li>
    <li>Automatic backups, adaptability, and SEO optimization</li>
  </ul>
</section>

<section class="container py-4">
    <form id="add-all-form" data-ajax="true" asp-controller="Cart" asp-action="AddAll" method="post" class="mb-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">Add All to Cart</button>
    </form>
    <h2 class="mb-3">Hosting Plans</h2>
    <div class="row g-4">
        @foreach (var item in Model.HostingPlans)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<section class="container py-4">
    <h2 class="mb-3">Create Website</h2>
    <div class="row g-4">
        @foreach (var item in Model.WebsiteProducts)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<section class="container py-4">
    <h2 class="mb-3">VPS Hosting</h2>
    <div class="row g-4">
        @foreach (var item in Model.VpsProducts)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<section class="container py-4">
    <h2 class="mb-3">VPN Tunneling</h2>
    <div class="row g-4">
        @foreach (var item in Model.VpnProducts)
        {
            <div class="col-12 col-md-6">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>
