@model CloudCityCenter.Models.ViewModels.HostingPageVm
@{
    ViewData["Title"] = "Web Hosting";
}

<section class="container py-4">
    <h1 class="mb-3">Web Hosting</h1>
    <p class="text-muted">
        Reliable, secure, and scalable hosting for websites of any size — from landing pages
        to high‑traffic platforms.
    </p>

    <img src="/images/hosting.png" alt="Hosting" class="img-fluid rounded-3 mb-4" />

    <h5>Why choose us</h5>
    <ul>
        <li>Optimized performance &amp; bandwidth</li>
        <li>Security hardening &amp; backups</li>
        <li>Easy control panel</li>
    </ul>
</section>

<section class="container py-4">
    <h2 class="mb-3">Hosting Plans</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.HostingPlans)
        {
            <div class="col">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>

<section class="container py-4">
    <h2 class="mb-3">Create Website</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.WebsiteProducts)
        {
            <div class="col">
                <div class="card h-100">
                    @await Html.PartialAsync("_ProductCard", item)
                </div>
            </div>
        }
    </div>
</section>
