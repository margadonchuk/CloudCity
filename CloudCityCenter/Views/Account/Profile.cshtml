@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Profile";
    var isAdmin = ViewData["IsAdmin"] as bool? ?? false;
}

<h1 class="mb-4">Profile</h1>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
        
        @if (isAdmin)
        {
            <div class="mt-4">
                <a href="@Url.Action("Index", "Servers", new { area = "Admin" })" class="btn btn-primary">
                    <i class="bi bi-gear me-2"></i>Админ-панель
                </a>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right me-2"></i>Выйти
            </button>
        </form>
    </div>
</div>
