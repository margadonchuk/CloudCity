@model CloudCityCenter.Models.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (Model.Items.Any())
{
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        var item = Model.Items[i];
        <div class="cart-item mb-3">
            <img src="@item.Product?.ImageUrl" alt="@item.Product?.Name" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=No+Image';" />
            <div class="p-3">
                <div class="row">
                    <div class="col">
                        <h5 class="mb-1">@item.Product?.Name</h5>
                        <p class="mb-0"><small class="text-muted">@item.ProductVariant?.Name</small></p>
                    </div>
                    <div class="col-auto text-end">
                        <p class="fw-semibold mb-0">@item.Item.Price.ToString("C")</p>
                    </div>
                </div>
            </div>
            <div class="p-2 text-end border-top">
                <form asp-action="Remove" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="index" value="@i" />
                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </div>
        </div>
    }
    <div class="d-flex justify-content-between mb-3">
        <a asp-controller="Servers" asp-action="Index" class="btn btn-outline-primary">Продолжить покупки</a>
        <form asp-action="Clear" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger">Очистить корзину</button>
        </form>
    </div>
    <div class="cart-summary">
        <div class="total">Total: @Model.Total.ToString("C")</div>
        <form asp-action="Checkout" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Checkout</button>
        </form>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        Your cart is empty. <a asp-controller="Servers" asp-action="Index" class="alert-link">Продолжить покупки</a>
    </div>
}
