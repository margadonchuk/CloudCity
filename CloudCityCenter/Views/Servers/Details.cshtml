@model CloudCityCenter.Models.Server

@{
    ViewData["Title"] = "Server Details";
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        @{ var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
                ? "https://via.placeholder.com/300x200?text=No+Image"
                : Model.ImageUrl; }
        <img src="@imageUrl" class="img-fluid" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <ul class="list-unstyled">
            <li><strong>CPU:</strong> @Model.CPU</li>
            <li><strong>RAM:</strong> @Model.RamGb GB</li>
            <li><strong>Storage:</strong> @Model.StorageGb GB</li>
            <li><strong>DDoS Tier:</strong> @Model.DDoSTier</li>
            <li><strong>Stock:</strong> @Model.Stock</li>
            <li><strong>Location:</strong> @Model.Location</li>
            <li><strong>Price:</strong> $@Model.PricePerMonth / month</li>
        </ul>
        <p>@Model.Description</p>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

