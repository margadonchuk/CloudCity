<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filters = {
            location: document.getElementById('filter-location'),
            persons: document.getElementById('filter-persons'),
            cpu: document.getElementById('filter-cpu'),
            ram: document.getElementById('filter-ram'),
            ssd: document.getElementById('filter-ssd')
        };
        
        const resetButton = document.getElementById('reset-filters');
        const planItems = document.querySelectorAll('.servers-plan-item');
        
        function applyFilters() {
            const selectedLocation = filters.location ? filters.location.value : '';
            const selectedPersons = filters.persons ? filters.persons.value : '';
            const selectedCpu = filters.cpu ? filters.cpu.value : '';
            const selectedRam = filters.ram ? filters.ram.value : '';
            const selectedSsd = filters.ssd ? filters.ssd.value : '';
            
            let visibleCount = 0;
            
            planItems.forEach(function(item) {
                const itemLocation = item.getAttribute('data-location') || '';
                const itemPersons = item.getAttribute('data-persons') || '';
                const itemCpu = item.getAttribute('data-cpu') || '';
                const itemRam = item.getAttribute('data-ram') || '';
                const itemSsd = item.getAttribute('data-ssd') || '';
                
                let show = true;
                
                // Проверяем каждый фильтр только если он выбран
                if (selectedLocation && selectedLocation.trim() !== '') {
                    if (itemLocation.trim() !== selectedLocation.trim()) {
                        show = false;
                    }
                }
                
                if (selectedPersons && selectedPersons.trim() !== '') {
                    if (itemPersons.trim() !== selectedPersons.trim()) {
                        show = false;
                    }
                }
                
                if (selectedCpu && selectedCpu.trim() !== '') {
                    if (itemCpu.trim() !== selectedCpu.trim()) {
                        show = false;
                    }
                }
                
                if (selectedRam && selectedRam.trim() !== '') {
                    if (itemRam.trim() !== selectedRam.trim()) {
                        show = false;
                    }
                }
                
                if (selectedSsd && selectedSsd.trim() !== '') {
                    if (itemSsd.trim() !== selectedSsd.trim()) {
                        show = false;
                    }
                }
                
                if (show) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.classList.add('hidden');
                    item.style.display = 'none';
                }
            });
            
            // Скрываем пустые секции и их заголовки (только если есть активные фильтры)
            const hasActiveFilters = (selectedLocation && selectedLocation.trim() !== '') ||
                                    (selectedPersons && selectedPersons.trim() !== '') ||
                                    (selectedCpu && selectedCpu.trim() !== '') ||
                                    (selectedRam && selectedRam.trim() !== '') ||
                                    (selectedSsd && selectedSsd.trim() !== '');
            
            document.querySelectorAll('section.container.my-5').forEach(function(section) {
                const allPlansInSection = section.querySelectorAll('.servers-plan-item');
                const visiblePlansInSection = Array.from(allPlansInSection).filter(function(plan) {
                    return !plan.classList.contains('hidden') && 
                           plan.style.display !== 'none';
                });
                
                const sectionHeader = section.querySelector('.servers-section-header');
                
                if (hasActiveFilters) {
                    if (visiblePlansInSection.length === 0 && allPlansInSection.length > 0) {
                        // Скрываем секцию и заголовок, если нет видимых планов, но есть планы в секции
                        section.style.display = 'none';
                        if (sectionHeader) {
                            sectionHeader.style.display = 'none';
                        }
                    } else {
                        // Показываем секцию и заголовок, если есть видимые планы
                        section.style.display = '';
                        if (sectionHeader) {
                            sectionHeader.style.display = '';
                        }
                    }
                } else {
                    // Если фильтры не активны, показываем все секции и заголовки
                    section.style.display = '';
                    if (sectionHeader) {
                        sectionHeader.style.display = '';
                    }
                }
            });
        }
        
        // Добавляем обработчики событий для всех фильтров
        if (filters.location) {
            filters.location.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.persons) {
            filters.persons.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.cpu) {
            filters.cpu.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.ram) {
            filters.ram.addEventListener('change', function() {
                applyFilters();
            });
        }
        if (filters.ssd) {
            filters.ssd.addEventListener('change', function() {
                applyFilters();
            });
        }
        
        // Обработчик для кнопки сброса
        if (resetButton) {
            resetButton.addEventListener('click', function() {
                // Сбрасываем все фильтры
                Object.values(filters).forEach(function(filter) {
                    if (filter) {
                        filter.value = '';
                    }
                });
                
                // Показываем все элементы явно
                planItems.forEach(function(item) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                });
                
                // Показываем все секции и их заголовки
                document.querySelectorAll('section.container.my-5').forEach(function(section) {
                    section.style.display = '';
                    const sectionHeader = section.querySelector('.servers-section-header');
                    if (sectionHeader) {
                        sectionHeader.style.display = '';
                    }
                });
            });
        }
    });
</script>

