    <!-- Server 1 -->
    <div class="col-12 col-md-6 col-lg-4">
      <div class="plan-card shadow-lg">
        <div class="plan-media">
          <img src="/images/dell.png" alt="DS1-E3">
        </div>

        <div class="plan-body">
          <h3 class="plan-title">DS1‑E3</h3>
          <p class="plan-price">Starting at <span>$59</span>/month</p>

          <ul class="plan-specs">
            <li><strong>CPU:</strong> Xeon E3‑1270v6</li>
            <li><strong>RAM:</strong> 32GB</li>
            <li><strong>Storage:</strong> 2×240GB SSD</li>
            <li><strong>Network:</strong> 1Gbps</li>
            <li><strong>IPv4:</strong> 1</li>
            <li><strong>Location:</strong> Germany</li>
          </ul>

          <a asp-controller="Trials"
             asp-action="Start"
             asp-route-plan="DS1-E3"
             data-plan="DS1-E3"
             class="btn btn-dark plan-btn">Start Free Trial</a>
        </div>
      </div>
    </div>

