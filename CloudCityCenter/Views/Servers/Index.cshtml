@using System
@{
    string GetLocalizedRegionName(string regionName)
    {
        if (regionName.Contains("Netherlands", StringComparison.OrdinalIgnoreCase))
            return Localizer["RegionNetherlands"].Value;
        if (regionName.Contains("Germany", StringComparison.OrdinalIgnoreCase))
            return Localizer["RegionGermany"].Value;
        if (regionName.Contains("United Kingdom") || regionName.Contains("Poland") || regionName.Contains("France"))
            return Localizer["RegionUKPolandFrance"].Value;
        if (regionName.Contains("Canada") || regionName.Contains("USA"))
            return Localizer["RegionCanadaUSA"].Value;
        if (regionName.Contains("Singapore") || regionName.Contains("India") || regionName.Contains("Australia"))
            return Localizer["RegionSingaporeIndiaAustralia"].Value;
        return regionName;
    }
}

