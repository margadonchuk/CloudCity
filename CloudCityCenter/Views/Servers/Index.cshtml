@model CloudCityCenter.Models.ViewModels.ServerIndexViewModel

@{
    ViewData["Title"] = "Servers";
}

<h1>Servers</h1>

@if (!Model.Servers.Any())
{
    <p class="text-muted">No servers match your filters.</p>
}
else
{
    if (!string.IsNullOrWhiteSpace(Model.FiltersSummary))
    {
        <p class="text-muted">Filters: @Model.FiltersSummary</p>
    }

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Servers)
        {
            <div class="col">
                <div class="card h-100">
                    @{ var imageUrl = string.IsNullOrWhiteSpace(item.ImageUrl)
                            ? "https://via.placeholder.com/300x200?text=No+Image"
                            : item.ImageUrl; }
                    <img src="@imageUrl" class="card-img-top" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <ul class="list-unstyled small">
                            <li>CPU: @item.CPU</li>
                            <li>RAM: @item.RamGb GB</li>
                            <li>Storage: @item.StorageGb GB</li>
                            <li>Location: @item.Location</li>
                        </ul>
                        <p class="card-text fw-semibold">$@item.PricePerMonth / month</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Servers" asp-action="Details" asp-route-slug="@item.Slug" class="btn btn-sm btn-outline-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    if (Model.TotalPages > 1)
    {
        <nav class="mt-4" aria-label="Server pages">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-location="@Model.Location"
                       asp-route-minRam="@Model.MinRam"
                       asp-route-maxRam="@Model.MaxRam"
                       asp-route-q="@Model.Q"
                       asp-route-sort="@Model.Sort"
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-pageSize="@Model.PageSize">Previous</a>
                </li>
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-location="@Model.Location"
                           asp-route-minRam="@Model.MinRam"
                           asp-route-maxRam="@Model.MaxRam"
                           asp-route-q="@Model.Q"
                           asp-route-sort="@Model.Sort"
                           asp-route-page="@i"
                           asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-location="@Model.Location"
                       asp-route-minRam="@Model.MinRam"
                       asp-route-maxRam="@Model.MaxRam"
                       asp-route-q="@Model.Q"
                       asp-route-sort="@Model.Sort"
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    }
}
