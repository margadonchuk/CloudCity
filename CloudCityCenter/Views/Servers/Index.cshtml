        padding-bottom: 1rem;
    }

    .servers-plan-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
    }

    .servers-plan-card:hover {
        transform: translateY(-5px);
