@using System
@{
    string GetLocalizedRegionName(string regionName)
    {
        if (regionName.Contains("Netherlands", StringComparison.OrdinalIgnoreCase))
            return Localizer["RegionNetherlands"].Value;
        if (regionName.Contains("Germany", StringComparison.OrdinalIgnoreCase))
            return Localizer["RegionGermany"].Value;
        if (regionName.Contains("United Kingdom") || regionName.Contains("Poland") || regionName.Contains("France"))
            return Localizer["RegionUKPolandFrance"].Value;
        if (regionName.Contains("Canada") || regionName.Contains("USA"))
            return Localizer["RegionCanadaUSA"].Value;
        if (regionName.Contains("Singapore") || regionName.Contains("India") || regionName.Contains("Australia"))
            return Localizer["RegionSingaporeIndiaAustralia"].Value;
        return regionName;
    }
}

<!-- Windows Server на 5-8 человек -->
<section class="container my-5">
    <div class="text-center mb-5 animate-on-scroll servers-section-header" data-animation="fade-in-up">
        <h2 class="display-5 fw-bold mb-3">@Localizer["WindowsServerForFiveToEightPersons"]</h2>
        <p class="lead text-muted">@Localizer["ChoosePlanForYourTasks"]</p>
    </div>

    @foreach (var region in Model.RegionsForFiveToEightPersons)
    {
        <div class="servers-region-block mb-5 animate-on-scroll" data-animation="fade-in-up">
            <div class="servers-region-header mb-4">
                <h3 class="h3 fw-bold text-center mb-3">@GetLocalizedRegionName(region.RegionName)</h3>
            </div>
            <div class="row g-4">
                @foreach (var plan in region.Plans)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 servers-plan-card shadow-sm">
                            @if (!string.IsNullOrEmpty(plan.ImageUrl))
                            {
                                <img src="@plan.ImageUrl" class="card-img-top" alt="@plan.Name" style="height: auto; max-height: 250px; width: 100%; object-fit: contain; padding: 1rem;" />
                            }
                            <div class="card-body d-flex flex-column">
                                <div class="text-center mb-3">
                                    <h4 class="card-title fw-bold mb-2">@plan.Name</h4>
                                </div>
                                <ul class="list-unstyled flex-grow-1 mb-4">
                                    <li class="mb-3">
                                        <i class="bi bi-cpu text-primary me-2"></i>
                                        <strong>@Localizer["CPU"]:</strong> @plan.CPU
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-memory text-primary me-2"></i>
                                        <strong>@Localizer["RAM"]:</strong> @plan.RAM
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-hdd-stack text-primary me-2"></i>
                                        <strong>@Localizer["SSD"]:</strong> @plan.SSD
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-speedometer2 text-primary me-2"></i>
                                        <strong>@Localizer["Network"]:</strong> @plan.Network
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-geo-alt text-primary me-2"></i>
                                        <strong>@Localizer["Country"]:</strong> @GetLocalizedRegionName(plan.Country)
                                    </li>
                                </ul>
                                <div class="mt-auto">
                                    <div class="text-center mb-3">
                                        <span class="display-6 fw-bold text-primary">$@plan.Price</span>
                                        <span class="text-muted">/ @Localizer["Month"]</span>
                                    </div>
                                    <form asp-controller="Cart" asp-action="Add" method="post" class="add-to-cart-form" data-ajax="true">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@plan.ProductId" />
                                        @if (plan.ProductVariantId.HasValue)
                                        {
                                            <input type="hidden" name="productVariantId" value="@plan.ProductVariantId" />
                                        }
                                        <button type="submit" class="btn btn-primary w-100">@Localizer["Order"]</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</section>

