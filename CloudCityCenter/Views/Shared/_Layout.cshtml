@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using Microsoft.AspNetCore.Http
@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CloudCityCenter</title>
    <link rel="icon" type="image/png" href="~/images/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CloudCityCenter.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)


</head>

<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var cartJson = Context.Session.GetString("Cart");
        var cartCount = 0;
        if (!string.IsNullOrEmpty(cartJson))
        {
            var cartItems = System.Text.Json.JsonSerializer.Deserialize<List<CloudCityCenter.Models.OrderItem>>(cartJson);
            cartCount = cartItems?.Count ?? 0;
        }
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="CloudCityCenter Logo" class="navbar-logo">
                </a>

                <!-- Telegram Bot для мобильной версии -->
                <a class="nav-link telegram-bot-link-mobile d-lg-none" href="https://t.me/CloudCityCenter_Bot" target="_blank">
                    <div class="telegram-bot-wrapper-mobile">
                        <i class="bi bi-telegram telegram-icon-mobile"></i>
                        <span class="telegram-bot-text-mobile">Telegram Bot</span>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left Navigation -->
                    <ul class="navbar-nav navbar-nav-left">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Servers" ? "active" : "")" asp-area="" asp-controller="Servers" asp-action="Index">
                                <i class="bi bi-server me-1"></i>@Localizer["Servers"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Hosting" ? "active" : "")" asp-area="" asp-controller="Hosting" asp-action="Index">
                                <i class="bi bi-globe me-1"></i>@Localizer["Hosting"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(currentController, "VPN", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vpn" asp-action="Index">
                                <i class="bi bi-shield-lock me-1"></i>@Localizer["VPN"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(currentController, "VPS", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vps" asp-action="Index">
                                <i class="bi bi-hdd-stack me-1"></i>@Localizer["VPS"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Services" ? "active" : "")" asp-area="" asp-controller="Services" asp-action="Index">
                                <i class="bi bi-gear me-1"></i>@Localizer["Services"]
                            </a>
                        </li>
                    </ul>

                    <!-- Center - Telegram Bot -->
                    <div class="navbar-center d-none d-lg-flex">
                        <a class="nav-link telegram-bot-link" href="https://t.me/CloudCityCenter_Bot" target="_blank">
                            <div class="telegram-bot-wrapper">
                                <i class="bi bi-telegram telegram-icon"></i>
                                <span class="telegram-bot-text">Telegram Bot</span>
                                <i class="bi bi-box-arrow-up-right telegram-bot-arrow"></i>
                            </div>
                        </a>
                    </div>

                    <!-- Right Navigation -->
                    <ul class="navbar-nav navbar-nav-right">
                        @{
                            var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
                            var cultureNames = new Dictionary<string, string>
                            {
                                { "en", "English" },
                                { "uk", "Українська" },
                                { "ru", "Русский" },
                                { "fr", "Français" },
                                { "de", "Deutsch" },
                                { "es", "Español" },
                                { "pl", "Polski" }
                            };
                            var currentLanguage = cultureNames.ContainsKey(currentCulture) ? cultureNames[currentCulture] : "English";
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "About" ? "active" : "")" asp-area="" asp-controller="About" asp-action="Index">
                                <i class="bi bi-info-circle me-1"></i>@Localizer["About"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Contact" ? "active" : "")" asp-area="" asp-controller="Contact" asp-action="Index">
                                <i class="bi bi-envelope me-1"></i>@Localizer["Contact"]
                            </a>
                        </li>
                        <!-- Language Switcher -->
                        <li class="nav-item dropdown language-switcher d-none d-lg-block">
                            <a class="nav-link language-switcher-btn" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                                <i class="bi bi-globe"></i>
                                <span class="language-text">@currentLanguage</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end language-dropdown" aria-labelledby="languageDropdown">
                                @foreach (var lang in cultureNames)
                                {
                                    <li>
                                        <form asp-controller="Language" asp-action="SetLanguage" method="post" class="language-form">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="culture" value="@lang.Key" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                            <button type="submit" class="dropdown-item language-option @(currentCulture == lang.Key ? "active" : "")" data-language-code="@lang.Key">
                                                <span class="language-name">@lang.Value</span>
                                                @if (currentCulture == lang.Key)
                                                {
                                                    <i class="bi bi-check-lg ms-auto text-primary"></i>
                                                }
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </li>
                        <!-- Language Switcher для мобильной версии - компактный аккордеон -->
                        <li class="nav-item language-switcher-mobile d-lg-none">
                            <div class="nav-link language-mobile-header" style="pointer-events: auto !important;">
                                <i class="bi bi-globe me-2"></i>
                                <span>@Localizer["Language"]: @currentLanguage</span>
                                <i class="bi bi-chevron-down ms-auto language-chevron"></i>
                            </div>
                            <div class="language-mobile-list">
                                @foreach (var lang in cultureNames)
                                {
                                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="language-form-mobile">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="culture" value="@lang.Key" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <button type="submit" class="nav-link language-mobile-item @(currentCulture == lang.Key ? "active" : "")">
                                            <span class="language-name">@lang.Value</span>
                                            @if (currentCulture == lang.Key)
                                            {
                                                <i class="bi bi-check-lg ms-auto text-primary"></i>
                                            }
                                        </button>
                                    </form>
                                }
                            </div>
                        </li>
                        <li class="nav-item position-relative">
                            <a class="nav-link cart-link" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i>
                                <span id="cart-count" class="cart-badge" @(cartCount == 0 ? "style=\"display:none;\"" : "")>@cartCount</span>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person-circle me-1"></i>@Localizer["Profile"]
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link register-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>@Localizer["Register"]
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link admin-link" asp-area="Admin" asp-controller="Servers" asp-action="Index">
                                    <i class="bi bi-shield-check me-1"></i>Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @{
    var isContactPage = Context.Request.Path.Value?.ToLower().Contains("/contact") ?? false;
}

@if (isContactPage)
{
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
}
else
{
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
}


    @await Html.PartialAsync("_Footer")
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


<button id="scrollTopBtn" title="Go to top">↑</button>

<script>
(function(){
  const viewport = document.querySelector('.services-viewport');
  const track = document.querySelector('.services-track');
  if(!viewport || !track) return;

  // Если дубликата нет — создаём
  if (track.dataset.cloned !== '1') {
    track.innerHTML = track.innerHTML + track.innerHTML; // дублируем набор А -> B
    track.dataset.cloned = '1';
  }

  function recalc(){
    const items = Array.from(track.children);
    const half = items.length / 2;              // первая половина — исходный набор А
    const gap = parseFloat(getComputedStyle(track).gap || '0');
    let width = 0;

    for (let i = 0; i < half; i++){
      width += items[i].getBoundingClientRect().width;
      if (i < half - 1) width += gap;          // между карточками
    }

    // проставляем точное расстояние сдвига и длительность по пикселям/секунду
    track.style.setProperty('--loop-distance', width + 'px');
    const pxPerSec = 120;                       // скорость: пикселей в секунду
    const dur = Math.max(10, Math.round(width / pxPerSec));
    track.style.setProperty('--dur', dur + 's');
  }

  // Стартовый расчёт и пересчёт при ресайзе
  recalc();
  let t;
  window.addEventListener('resize', () => {
    clearTimeout(t);
    t = setTimeout(recalc, 120);
  });
})();
</script>

<script>
  // Функция для переключения меню языков
  function toggleLanguageMenu(event) {
    if (event) {
      event.preventDefault();
      event.stopPropagation();
    }
    const header = event ? event.currentTarget : event;
    const switcher = header.closest('.language-switcher-mobile');
    const chevron = header.querySelector('.language-chevron');
    if (switcher) {
      switcher.classList.toggle('active');
      if (chevron) {
        chevron.classList.toggle('bi-chevron-down');
        chevron.classList.toggle('bi-chevron-up');
      }
    }
    return false;
  }
  
  // Инициализация аккордеона языков при загрузке
  document.addEventListener('DOMContentLoaded', function() {
    const languageHeaders = document.querySelectorAll('.language-mobile-header');
    languageHeaders.forEach(function(header) {
      header.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        toggleLanguageMenu(e);
      }, true);
    });
  });
  
  // Обработка переключения языков в мобильной версии
  (function() {
    function initLanguageSwitcher() {
      const navbarCollapse = document.querySelector('#navbarNav');
      const languageFormsMobile = document.querySelectorAll('form.language-form-mobile');
      
      if (!navbarCollapse || languageFormsMobile.length === 0) return;
      
      // Обрабатываем клики на кнопки переключения языков в мобильной версии
      languageFormsMobile.forEach(function(form) {
        const submitButton = form.querySelector('button[type="submit"]');
        
        if (submitButton) {
          submitButton.addEventListener('click', function(e) {
            // Останавливаем всплытие, но не предотвращаем submit
            e.stopPropagation();
            
            // Закрываем аккордеон языков
            const switcher = form.closest('.language-switcher-mobile');
            if (switcher) {
              switcher.classList.remove('active');
            }
            
            // Закрываем collapse меню после небольшой задержки
            if (navbarCollapse && navbarCollapse.classList.contains('show')) {
              setTimeout(function() {
                if (typeof bootstrap !== 'undefined' && bootstrap.Collapse) {
                  const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                  if (bsCollapse) {
                    bsCollapse.hide();
                  }
                } else {
                  navbarCollapse.classList.remove('show');
                  navbarCollapse.style.display = 'none';
                }
              }, 200);
            }
          }, true);
        }
      });
    }
    
    // Инициализируем после полной загрузки
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLanguageSwitcher);
    } else {
      setTimeout(initLanguageSwitcher, 100);
    }
  })();
</script>


</body>
</html>


