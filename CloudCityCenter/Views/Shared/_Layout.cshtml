@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using Microsoft.AspNetCore.Http
@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CloudCityCenter</title>
    <link rel="icon" type="image/png" href="~/images/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)


</head>

<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var cartCount = 0;
        try
        {
            var cartJson = Context.Session?.GetString("Cart");
            if (!string.IsNullOrEmpty(cartJson))
            {
                var cartItems = System.Text.Json.JsonSerializer.Deserialize<List<CloudCityCenter.Models.OrderItem>>(cartJson);
                cartCount = cartItems?.Count ?? 0;
            }
        }
        catch
        {
            // Игнорируем ошибки сессии
            cartCount = 0;
        }
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern fixed-top">
            <div class="container-fluid">
                <!-- Логотип - слева -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="CloudCityCenter Logo" class="navbar-logo">
                </a>
                
                <!-- Стандартная Bootstrap кнопка для мобильного меню -->
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-controls="mobileMenu" aria-expanded="false" aria-label="Toggle navigation" style="border: 2px solid #000; border-radius: 8px; padding: 8px 12px; background: #000; width: 44px; height: 44px; margin-left: auto; z-index: 1050;">
                    <span class="navbar-toggler-icon" style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 30 30%27%3E%3Cpath stroke=%27rgba%28255, 255, 255, 1%29%27 stroke-linecap=%27round%27 stroke-miterlimit=%2710%27 stroke-width=%272%27 d=%27M4 7h22M4 15h22M4 23h22%27/%3E%3C/svg%3E'); width: 20px; height: 20px;"></span>
                </button>

                <!-- Десктопная версия меню - вне collapse -->
                <div class="d-none d-lg-flex align-items-center w-100 position-relative">
                    <!-- Left Navigation -->
                    <ul class="navbar-nav navbar-nav-left">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Servers" ? "active" : "")" asp-area="" asp-controller="Servers" asp-action="Index">
                                <i class="bi bi-server me-1"></i>@Localizer["Servers"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Hosting" ? "active" : "")" asp-area="" asp-controller="Hosting" asp-action="Index">
                                <i class="bi bi-globe me-1"></i>@Localizer["Hosting"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(currentController, "VPN", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vpn" asp-action="Index">
                                <i class="bi bi-shield-lock me-1"></i>@Localizer["VPN"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(currentController, "VPS", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vps" asp-action="Index">
                                <i class="bi bi-hdd-stack me-1"></i>@Localizer["VPS"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(string.Equals(currentController, "VDI", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="VDI" asp-action="Index">
                                <i class="bi bi-display me-1"></i>@Localizer["VDI"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Services" ? "active" : "")" asp-area="" asp-controller="Services" asp-action="Index">
                                <i class="bi bi-gear me-1"></i>@Localizer["Services"]
                            </a>
                        </li>
                    </ul>

                    <!-- Center - Social Media Links -->
                    <div class="navbar-center-social d-none d-lg-flex align-items-center gap-2">
                        <a class="nav-link instagram-link" href="https://instagram.com/cloudcity.center" target="_blank" rel="noopener noreferrer">
                            <div class="instagram-wrapper">
                                <i class="bi bi-instagram instagram-icon"></i>
                                <span class="instagram-text">Instagram</span>
                                <i class="bi bi-box-arrow-up-right instagram-arrow"></i>
                            </div>
                        </a>
                        <a class="nav-link telegram-bot-link" href="https://t.me/CloudCityCenter_Bot" target="_blank">
                            <div class="telegram-bot-wrapper">
                                <i class="bi bi-telegram telegram-icon"></i>
                                <span class="telegram-bot-text">Telegram</span>
                                <i class="bi bi-box-arrow-up-right telegram-bot-arrow"></i>
                            </div>
                        </a>
                        <a class="nav-link whatsapp-link" href="https://wa.me/33773166380" target="_blank" rel="noopener noreferrer">
                            <div class="whatsapp-wrapper">
                                <i class="bi bi-whatsapp whatsapp-icon"></i>
                                <span class="whatsapp-text">WhatsApp</span>
                                <i class="bi bi-box-arrow-up-right whatsapp-arrow"></i>
                            </div>
                        </a>
                    </div>

                    <!-- Right Navigation -->
                    <ul class="navbar-nav navbar-nav-right">
                        @{
                            var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
                            var cultureNames = new Dictionary<string, string>
                            {
                                { "en", "English" },
                                { "uk", "Українська" },
                                { "ru", "Русский" },
                                { "fr", "Français" },
                                { "de", "Deutsch" },
                                { "es", "Español" },
                                { "pl", "Polski" }
                            };
                            var currentLanguage = cultureNames.ContainsKey(currentCulture) ? cultureNames[currentCulture] : "English";
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "About" ? "active" : "")" asp-area="" asp-controller="About" asp-action="Index">
                                <i class="bi bi-info-circle me-1"></i>@Localizer["About"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Contact" ? "active" : "")" asp-area="" asp-controller="Contact" asp-action="Index">
                                <i class="bi bi-envelope me-1"></i>@Localizer["Contact"]
                            </a>
                        </li>
                        <!-- Language Switcher -->
                        <li class="nav-item dropdown language-switcher d-none d-lg-block">
                            <a class="nav-link language-switcher-btn" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                                <i class="bi bi-globe"></i>
                                <span class="language-text">@currentLanguage</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end language-dropdown" aria-labelledby="languageDropdown">
                                @foreach (var lang in cultureNames)
                                {
                                    <li>
                                        <form asp-controller="Language" asp-action="SetLanguage" method="post" class="language-form">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="culture" value="@lang.Key" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                            <button type="submit" class="dropdown-item language-option @(currentCulture == lang.Key ? "active" : "")" data-language-code="@lang.Key">
                                                <span class="language-name">@lang.Value</span>
                                                @if (currentCulture == lang.Key)
                                                {
                                                    <i class="bi bi-check-lg ms-auto text-primary"></i>
                                                }
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item position-relative">
                            <a class="nav-link cart-link" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3 cart-icon-large"></i>
                                <span class="cart-label">@Localizer["Cart"]</span>
                                <span id="cart-count" class="cart-badge" @(cartCount == 0 ? "style=\"display:none;\"" : "")>@cartCount</span>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-area="" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person-circle me-1"></i>@Localizer["Profile"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Orders" ? "active" : "")" asp-area="" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt me-1"></i>@Localizer["Orders"]
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link login-link @(currentController == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>@Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link register-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>@Localizer["Register"]
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link admin-link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-shield-check me-1"></i>Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Мобильная версия меню через collapse (fallback, скрыто, используется offcanvas) -->
                <div class="collapse navbar-collapse d-lg-none d-none" id="mainNavbarMobile" style="display: none !important;">
                    <ul class="navbar-nav">
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-2"></i>@Localizer["Home"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "About" ? "active" : "")" asp-area="" asp-controller="About" asp-action="Index">
                                <i class="bi bi-info-circle me-2"></i>@Localizer["About"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "Services" ? "active" : "")" asp-area="" asp-controller="Services" asp-action="Index">
                                <i class="bi bi-gear me-2"></i>@Localizer["Services"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "Servers" ? "active" : "")" asp-area="" asp-controller="Servers" asp-action="Index">
                                <i class="bi bi-server me-2"></i>@Localizer["Servers"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "Hosting" ? "active" : "")" asp-area="" asp-controller="Hosting" asp-action="Index">
                                <i class="bi bi-globe me-2"></i>@Localizer["Hosting"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(string.Equals(currentController, "VPN", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vpn" asp-action="Index">
                                <i class="bi bi-shield-lock me-2"></i>@Localizer["VPN"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(string.Equals(currentController, "VPS", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vps" asp-action="Index">
                                <i class="bi bi-hdd-stack me-2"></i>@Localizer["VPS"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(string.Equals(currentController, "VDI", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="VDI" asp-action="Index">
                                <i class="bi bi-display me-2"></i>@Localizer["VDI"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link @(currentController == "Contact" ? "active" : "")" asp-area="" asp-controller="Contact" asp-action="Index">
                                <i class="bi bi-envelope me-2"></i>@Localizer["Contact"]
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link d-flex align-items-center justify-content-between" asp-controller="Cart" asp-action="Index">
                                <span class="d-flex align-items-center">
                                    <i class="bi bi-cart3 me-2"></i>@Localizer["Cart"]
                                </span>
                                <span class="badge bg-danger rounded-pill" @(cartCount == 0 ? "style=\"display:none;\"" : "")>@cartCount</span>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item border-bottom">
                                <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-area="" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person-circle me-2"></i>@Localizer["Profile"]
                                </a>
                            </li>
                            <li class="nav-item border-bottom">
                                <a class="nav-link @(currentController == "Orders" ? "active" : "")" asp-area="" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt me-2"></i>@Localizer["Orders"]
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item border-bottom">
                                <a class="nav-link @(currentController == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>@Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item border-bottom">
                                <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-2"></i>@Localizer["Register"]
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item border-bottom">
                                <a class="nav-link admin-link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-shield-check me-2"></i>Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Mobile Offcanvas Menu -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
            <div class="offcanvas-header border-bottom">
                <div class="offcanvas-header-content d-flex align-items-center w-100 gap-2">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" data-offcanvas-close>
                        <img src="~/images/logo.png" alt="CloudCityCenter Logo" class="navbar-logo" style="height: 32px;">
                    </a>
                    <div class="d-flex align-items-center justify-content-center gap-2">
                        <a class="nav-link instagram-link-mobile" href="https://instagram.com/cloudcity.center" target="_blank" rel="noopener noreferrer">
                            <div class="instagram-wrapper-mobile">
                                <i class="bi bi-instagram instagram-icon-mobile"></i>
                            </div>
                        </a>
                        <a class="nav-link telegram-bot-link-offcanvas" href="https://t.me/CloudCityCenter_Bot" target="_blank">
                            <div class="telegram-bot-wrapper-mobile">
                                <i class="bi bi-telegram telegram-icon-mobile"></i>
                            </div>
                        </a>
                        <a class="nav-link whatsapp-link-mobile" href="https://wa.me/33773166380" target="_blank" rel="noopener noreferrer">
                            <div class="whatsapp-wrapper-mobile">
                                <i class="bi bi-whatsapp whatsapp-icon-mobile"></i>
                            </div>
                        </a>
                    </div>
                    <a class="nav-link cart-link-offcanvas position-relative" asp-controller="Cart" asp-action="Index" data-offcanvas-close>
                        <i class="bi bi-cart3"></i>
                        <span id="cart-count-offcanvas" class="cart-badge-mobile" @(cartCount == 0 ? "style=\"display:none;\"" : "")>@cartCount</span>
                    </a>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
            </div>
            <div class="offcanvas-body p-0">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-house me-2"></i>@Localizer["Home"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "About" ? "active" : "")" asp-area="" asp-controller="About" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-info-circle me-2"></i>@Localizer["About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Services" ? "active" : "")" asp-area="" asp-controller="Services" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-gear me-2"></i>@Localizer["Services"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://instagram.com/cloudcity.center" target="_blank" rel="noopener noreferrer" data-offcanvas-close>
                            <i class="bi bi-instagram me-2"></i>Instagram
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Servers" ? "active" : "")" asp-area="" asp-controller="Servers" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-server me-2"></i>@Localizer["Servers"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Hosting" ? "active" : "")" asp-area="" asp-controller="Hosting" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-globe me-2"></i>@Localizer["Hosting"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(string.Equals(currentController, "VPN", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vpn" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-shield-lock me-2"></i>@Localizer["VPN"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(string.Equals(currentController, "VPS", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="Vps" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-hdd-stack me-2"></i>@Localizer["VPS"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(string.Equals(currentController, "VDI", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-area="" asp-controller="VDI" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-display me-2"></i>@Localizer["VDI"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Contact" ? "active" : "")" asp-area="" asp-controller="Contact" asp-action="Index" data-offcanvas-close>
                            <i class="bi bi-envelope me-2"></i>@Localizer["Contact"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link cart-link-mobile-menu d-flex align-items-center justify-content-between" asp-controller="Cart" asp-action="Index" data-offcanvas-close>
                            <span class="d-flex align-items-center">
                                <i class="bi bi-cart3 me-2"></i>@Localizer["Cart"]
                            </span>
                            <span id="cart-count-mobile" class="cart-badge-inline" @(cartCount == 0 ? "style=\"display:none;\"" : "")>@cartCount</span>
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-area="" asp-controller="Account" asp-action="Profile" data-offcanvas-close>
                                <i class="bi bi-person-circle me-2"></i>@Localizer["Profile"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Orders" ? "active" : "")" asp-area="" asp-controller="Orders" asp-action="Index" data-offcanvas-close>
                                <i class="bi bi-receipt me-2"></i>@Localizer["Orders"]
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Login" ? "active" : "")" asp-controller="Account" asp-action="Login" data-offcanvas-close>
                                <i class="bi bi-box-arrow-in-right me-2"></i>@Localizer["Login"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Account" ? "active" : "")" asp-controller="Account" asp-action="Register" data-offcanvas-close>
                                <i class="bi bi-person-plus me-2"></i>@Localizer["Register"]
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link admin-link" asp-area="Admin" asp-controller="Products" asp-action="Index" data-offcanvas-close>
                                <i class="bi bi-shield-check me-2"></i>Admin
                            </a>
                        </li>
                    }
                    <li class="nav-item mt-auto pt-3 border-top">
                        <div class="language-mobile-header px-3 py-2 mb-2" style="font-weight: 600; color: #0d6efd; cursor: pointer; display: flex; align-items: center; justify-content: space-between;">
                            <div style="display: flex; align-items: center;">
                                <i class="bi bi-globe me-2"></i>@Localizer["Language"]
                            </div>
                            <i class="bi bi-chevron-down language-chevron" style="transition: transform 0.3s ease;"></i>
                        </div>
                        <div class="language-mobile-list" style="display: none;">
                            @foreach (var lang in cultureNames)
                            {
                                <form asp-controller="Language" asp-action="SetLanguage" method="post" class="language-form-mobile">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="culture" value="@lang.Key" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <button type="submit" class="nav-link language-mobile-item @(currentCulture == lang.Key ? "active" : "")" style="padding-left: 40px !important;">
                                        <span class="language-name">@lang.Value</span>
                                        @if (currentCulture == lang.Key)
                                        {
                                            <i class="bi bi-check-lg ms-auto text-primary"></i>
                                        }
                                    </button>
                                </form>
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    @{
    var isContactPage = Context.Request.Path.Value?.ToLower().Contains("/contact") ?? false;
}

@if (isContactPage)
{
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
}
else
{
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
