  function toggleLanguageMenu(event) {
    if (event) {
      event.preventDefault();
      event.stopPropagation();
    }
    const header = event ? event.currentTarget : event;
    const switcher = header.closest('.language-switcher-mobile');
    const chevron = header.querySelector('.language-chevron');
    if (switcher) {
      switcher.classList.toggle('active');
      if (chevron) {
        chevron.classList.toggle('bi-chevron-down');
        chevron.classList.toggle('bi-chevron-up');
      }
    }
    return false;
  }
  
  // Инициализация аккордеона языков при загрузке
  document.addEventListener('DOMContentLoaded', function() {
    const languageHeaders = document.querySelectorAll('.language-mobile-header');
    languageHeaders.forEach(function(header) {
      header.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        const list = header.nextElementSibling;
        const chevron = header.querySelector('.language-chevron');
        
        if (list) {
          const isHidden = list.style.display === 'none' || !list.style.display;
          list.style.display = isHidden ? 'block' : 'none';
          
          if (chevron) {
            if (isHidden) {
              chevron.classList.remove('bi-chevron-down');
              chevron.classList.add('bi-chevron-up');
            } else {
              chevron.classList.remove('bi-chevron-up');
              chevron.classList.add('bi-chevron-down');
            }
          }
        }
      }, true);
    });
  });
  
  // Обработка переключения языков в мобильной версии (offcanvas)
  (function() {
    function initLanguageSwitcher() {
      const mobileMenu = document.querySelector('#mobileMenu');
      const languageFormsMobile = document.querySelectorAll('form.language-form-mobile');
      
      if (!mobileMenu || languageFormsMobile.length === 0) return;
      
      // Обрабатываем клики на кнопки переключения языков в мобильной версии
      languageFormsMobile.forEach(function(form) {
        const submitButton = form.querySelector('button[type="submit"]');
        
        if (submitButton) {
          submitButton.addEventListener('click', function(e) {
            // Останавливаем всплытие, но не предотвращаем submit
            e.stopPropagation();
            
            // Закрываем offcanvas меню после небольшой задержки
            if (mobileMenu && typeof bootstrap !== 'undefined' && bootstrap.Offcanvas) {
              setTimeout(function() {
                const bsOffcanvas = bootstrap.Offcanvas.getInstance(mobileMenu);
                if (bsOffcanvas) {
                  bsOffcanvas.hide();
                }
              }, 100);
            }
          }, true);
        }
      });
    }
    
    // Инициализируем после полной загрузки
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLanguageSwitcher);
    } else {
      setTimeout(initLanguageSwitcher, 100);
    }
  })();
  
  // Mobile menu - Bootstrap handles toggle automatically
  // This just handles close buttons and aria attributes
  (function() {
    function initMobileMenu() {
      var menu = document.getElementById('mobileMenu');
      var btn = document.querySelector('.navbar-toggler[data-bs-target="#mobileMenu"]');
      
      if (!menu || !btn) {
        setTimeout(initMobileMenu, 100);
        return;
      }
      
      // Verify Bootstrap is loaded
      if (typeof bootstrap === 'undefined') {
        setTimeout(initMobileMenu, 200);
        return;
      }
      
      // Initialize offcanvas
      var offcanvasInstance = bootstrap.Offcanvas.getOrCreateInstance(menu, {
        backdrop: true,
        scroll: false
      });
      
      // Handle close buttons with data-offcanvas-close attribute
      var closeLinks = menu.querySelectorAll('a[data-offcanvas-close]');
      closeLinks.forEach(function(link) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          if (bootstrap.Offcanvas) {
            var offcanvasInstance = bootstrap.Offcanvas.getInstance(menu);
            if (offcanvasInstance) {
              offcanvasInstance.hide();
            }
          }
        });
      });
      
      // Update button aria-expanded when menu opens/closes
      menu.addEventListener('show.bs.offcanvas', function() {
        btn.setAttribute('aria-expanded', 'true');
      });
      menu.addEventListener('hide.bs.offcanvas', function() {
        btn.setAttribute('aria-expanded', 'false');
      });
    }
    
    // Initialize after DOM and Bootstrap are ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(initMobileMenu, 300);
      });
    } else {
      setTimeout(initMobileMenu, 300);
    }
    
    // Also try after window loads
    window.addEventListener('load', function() {
      setTimeout(initMobileMenu, 500);
    });
  })();
</script>


