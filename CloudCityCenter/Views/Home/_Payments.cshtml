<!-- PAYMENTS SECTION -->
<section class="payments-section py-5 position-relative">
  <div class="payments-background"></div>
  <div class="container">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="section-badge mb-3">
        <span class="badge-text">@Localizer["Payments"]</span>
      </div>
      <h2 class="display-4 fw-bold mb-4 payments-title">
        <span class="text-gradient-2">@Localizer["ChooseYourWay"]</span> <span class="text-primary">@Localizer["ToPay"]</span>
      </h2>
      <p class="lead text-muted mb-5 mx-auto payments-description" style="max-width: 900px; font-size: 1.2rem;">
        @Localizer["PaymentsDescription"]
      </p>
    </div>
    
    <div class="payment-logos-wrapper animate-on-scroll" data-animation="fade-in-up">
      <div class="payment-logos">
        <div class="pay-badge payment-badge-item">
          <div class="payment-badge-inner payment-paypal">
            <img src="/images/paypal.png" alt="PayPal">
            <div class="payment-badge-glow"></div>
          </div>
        </div>
        <div class="pay-badge payment-badge-item">
          <div class="payment-badge-inner payment-bitcoin">
            <img src="/images/bitcoin.png" alt="Bitcoin">
            <div class="payment-badge-glow"></div>
          </div>
        </div>
        <div class="pay-badge payment-badge-item">
          <div class="payment-badge-inner payment-ethereum">
            <img src="/images/ethereum.png" alt="Ethereum">
            <div class="payment-badge-glow"></div>
          </div>
        </div>
        <div class="pay-badge payment-badge-item">
          <div class="payment-badge-inner payment-bank">
            <img src="/images/bank.png" alt="Bank transfer">
            <div class="payment-badge-glow"></div>
          </div>
        </div>
        <div class="pay-badge payment-badge-item">
          <div class="payment-badge-inner payment-tether">
            <img src="/images/tether.png" alt="Tether">
            <div class="payment-badge-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

