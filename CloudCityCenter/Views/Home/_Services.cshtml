<section class="services-section-main container py-5 position-relative">
  <div class="services-background-pattern"></div>
  <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
    <div class="section-badge mb-3">
      <span class="badge-text">@Localizer["OurValues"]</span>
    </div>
    <h2 class="display-4 fw-bold mb-3 services-main-title">
      <span class="text-gradient-2">@Localizer["WhatDrivesUs"]</span>
    </h2>
    <p class="lead text-muted">@Localizer["CorePrinciples"]</p>
  </div>

  <!-- Бесконечная карусель сервисов -->
  <div class="services-strip-wrapper animate-on-scroll" data-animation="fade-in-up">
    <div class="services-strip">
      <div class="services-track">
        <!-- Первый набор -->
        <div class="feature text-center">
          <img class="feature-img" src="/images/reliability.png" alt="Reliability">
          <h4 class="fw-semibold mt-3">@Localizer["Reliability"]</h4>
          <p class="text-muted mb-0">@Localizer["ReliabilityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/security.png" alt="Security">
          <h4 class="fw-semibold mt-3">@Localizer["Security"]</h4>
          <p class="text-muted mb-0">@Localizer["SecurityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/affordability.png" alt="Affordability">
          <h4 class="fw-semibold mt-3">@Localizer["Affordability"]</h4>
          <p class="text-muted mb-0">@Localizer["AffordabilityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/service3.png" alt="Network Equipment">
          <h4 class="fw-semibold mt-3">@Localizer["NetworkEquipment"]</h4>
          <p class="text-muted mb-0">@Localizer["NetworkEquipmentDesc"]</p>
        </div>
        <!-- Дублируем для бесшовности -->
        <div class="feature text-center">
          <img class="feature-img" src="/images/reliability.png" alt="Reliability">
          <h4 class="fw-semibold mt-3">@Localizer["Reliability"]</h4>
          <p class="text-muted mb-0">@Localizer["ReliabilityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/security.png" alt="Security">
          <h4 class="fw-semibold mt-3">@Localizer["Security"]</h4>
          <p class="text-muted mb-0">@Localizer["SecurityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/affordability.png" alt="Affordability">
          <h4 class="fw-semibold mt-3">@Localizer["Affordability"]</h4>
          <p class="text-muted mb-0">@Localizer["AffordabilityDesc"]</p>
        </div>
        <div class="feature text-center">
          <img class="feature-img" src="/images/service3.png" alt="Network Equipment">
          <h4 class="fw-semibold mt-3">@Localizer["NetworkEquipment"]</h4>
          <p class="text-muted mb-0">@Localizer["NetworkEquipmentDesc"]</p>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-5 animate-on-scroll" data-animation="fade-in-up">
    <a class="btn btn-primary btn-lg px-5 py-3 services-main-btn" 
       asp-controller="Services" asp-action="Index"
       style="border-radius: 50px; font-weight: 600; box-shadow: 0 8px 25px rgba(13, 110, 253, 0.25);">
      <i class="bi bi-eye me-2"></i> Learn More
    </a>
  </div>
</section>




