<!-- GLOBAL DATA CENTERS SECTION -->
<section class="datacenter-section py-5 position-relative">
  <div class="datacenter-background"></div>
  <div class="container">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="section-badge mb-3">
        <span class="badge-text">Global Network</span>
      </div>
      <h2 class="display-4 fw-bold mb-4 datacenter-title">
        <span class="text-gradient-2">Our Global</span> <span class="text-primary">Data Centers</span>
      </h2>
      <p class="lead text-muted mb-5 datacenter-description" style="max-width: 800px; margin: 0 auto; font-size: 1.2rem;">
        Worldwide coverage for optimal performance. Our strategically located data centers ensure low latency and high availability for your applications.
      </p>
    </div>
    
    <div class="datacenter-map-wrapper animate-on-scroll" data-animation="fade-in-up">
      <div class="datacenter-map-container">
        <img src="/images/worldmap.png" alt="CloudCity Center Data Centers Map" class="datacenter-map-image">
        <div class="datacenter-pins">
          <div class="datacenter-pin pin-1" data-location="USA West">
            <div class="pin-dot"></div>
            <div class="pin-label">USA West</div>
          </div>
          <div class="datacenter-pin pin-2" data-location="USA East">
            <div class="pin-dot"></div>
            <div class="pin-label">USA East</div>
          </div>
          <div class="datacenter-pin pin-3" data-location="Europe">
            <div class="pin-dot"></div>
            <div class="pin-label">Europe</div>
          </div>
          <div class="datacenter-pin pin-4" data-location="Asia">
            <div class="pin-dot"></div>
            <div class="pin-label">Asia</div>
          </div>
          <div class="datacenter-pin pin-5" data-location="Australia">
            <div class="pin-dot"></div>
            <div class="pin-label">Australia</div>
          </div>
        </div>
      </div>
    </div>

    <div class="datacenter-stats mt-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="row g-4">
        <div class="col-md-3 col-6">
          <div class="datacenter-stat-item">
            <div class="datacenter-stat-icon">
              <i class="bi bi-globe"></i>
            </div>
            <div class="datacenter-stat-number">50+</div>
            <div class="datacenter-stat-label">Countries</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="datacenter-stat-item">
            <div class="datacenter-stat-icon">
              <i class="bi bi-server"></i>
            </div>
            <div class="datacenter-stat-number">1000+</div>
            <div class="datacenter-stat-label">Servers</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="datacenter-stat-item">
            <div class="datacenter-stat-icon">
              <i class="bi bi-speedometer2"></i>
            </div>
            <div class="datacenter-stat-number">99.9%</div>
            <div class="datacenter-stat-label">Uptime</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="datacenter-stat-item">
            <div class="datacenter-stat-icon">
              <i class="bi bi-lightning-charge"></i>
            </div>
            <div class="datacenter-stat-number">&lt;50ms</div>
            <div class="datacenter-stat-label">Latency</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

