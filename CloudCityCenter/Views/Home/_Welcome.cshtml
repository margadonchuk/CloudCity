<section class="welcome-section py-5 position-relative overflow-hidden">
  <div class="welcome-background-pattern"></div>
  <div class="container">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="section-badge mb-3 mx-auto">
        <span class="badge-text">@Localizer["WhyChooseUs"]</span>
      </div>
      <h2 class="fw-bold display-4 mb-4 welcome-title">
        <span class="text-gradient-2">@Localizer["OurAdvantages"]</span>
      </h2>
      <p class="welcome-description mx-auto" style="font-size: 1.15rem; color: #555; line-height: 1.8; max-width: 800px;">
        @Localizer["WelcomeDescription"]
      </p>
    </div>

    <div class="row g-4">
      <!-- Feature 1: Security -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="welcome-feature-card h-100 text-center p-4">
          <div class="welcome-feature-icon mb-3">
            <i class="bi bi-shield-lock-fill"></i>
          </div>
          <h4 class="fw-bold mb-3">@Localizer["EnterpriseSecurity"]</h4>
          <p class="text-muted">@Localizer["EnterpriseSecurityDesc"]</p>
        </div>
      </div>

      <!-- Feature 2: Scalability -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up" style="animation-delay: 0.1s;">
        <div class="welcome-feature-card h-100 text-center p-4">
          <div class="welcome-feature-icon mb-3">
            <i class="bi bi-arrow-up-circle-fill"></i>
          </div>
          <h4 class="fw-bold mb-3">@Localizer["EasyScaling"]</h4>
          <p class="text-muted">@Localizer["EasyScalingDesc"]</p>
        </div>
      </div>

      <!-- Feature 3: Cost Effective -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up" style="animation-delay: 0.2s;">
        <div class="welcome-feature-card h-100 text-center p-4">
          <div class="welcome-feature-icon mb-3">
            <i class="bi bi-currency-dollar"></i>
          </div>
          <h4 class="fw-bold mb-3">@Localizer["CompetitivePricing"]</h4>
          <p class="text-muted">@Localizer["CompetitivePricingDesc"]</p>
        </div>
      </div>

      <!-- Feature 4: Management -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up" style="animation-delay: 0.3s;">
        <div class="welcome-feature-card h-100 text-center p-4">
          <div class="welcome-feature-icon mb-3">
            <i class="bi bi-sliders"></i>
          </div>
          <h4 class="fw-bold mb-3">@Localizer["FullControl"]</h4>
          <p class="text-muted">@Localizer["FullControlDesc"]</p>
        </div>
      </div>
    </div>

    <!-- Unique CTA Section -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="welcome-cta-box text-center p-5 animate-on-scroll" data-animation="fade-in-up">
          <h3 class="fw-bold mb-3">@Localizer["ReadyToStart"]</h3>
          <p class="mb-4" style="font-size: 1.1rem; color: #666;">@Localizer["ReadyToStartDesc"]</p>
          <div class="d-flex flex-wrap gap-3 justify-content-center">
            <a class="btn btn-primary btn-lg px-5 py-3" 
               asp-controller="Servers" asp-action="Index" 
               style="border-radius: 50px; font-weight: 600; box-shadow: 0 8px 25px rgba(13, 110, 253, 0.25);">
              <i class="bi bi-search me-2"></i>@Localizer["BrowseServices"]
            </a>
            <a class="btn btn-outline-primary btn-lg px-5 py-3" 
               asp-controller="Contact" asp-action="Index" 
               style="border-radius: 50px; font-weight: 600; border-width: 2px;">
              <i class="bi bi-envelope me-2"></i>@Localizer["ContactUs"]
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
