<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filters = {
            location: document.getElementById('filter-location'),
            persons: document.getElementById('filter-persons'),
            cpu: document.getElementById('filter-cpu'),
            ram: document.getElementById('filter-ram'),
            ssd: document.getElementById('filter-ssd')
        };
        
        const resetButton = document.getElementById('reset-filters');
        const planItems = document.querySelectorAll('.vdi-plan-item');
        
        function applyFilters() {
            const selectedLocation = filters.location.value;
            const selectedPersons = filters.persons.value;
            const selectedCpu = filters.cpu.value;
            const selectedRam = filters.ram.value;
            const selectedSsd = filters.ssd.value;
            
            planItems.forEach(function(item) {
                const itemLocation = item.getAttribute('data-location') || '';
                const itemPersons = item.getAttribute('data-persons') || '';
                const itemCpu = item.getAttribute('data-cpu') || '';
                const itemRam = item.getAttribute('data-ram') || '';
                const itemSsd = item.getAttribute('data-ssd') || '';
                
                let show = true;
                
                // Проверяем каждый фильтр только если он выбран
                if (selectedLocation && selectedLocation.trim() !== '') {
                    if (itemLocation !== selectedLocation) {
                        show = false;
                    }
                }
                
                if (selectedPersons && selectedPersons.trim() !== '') {
                    if (itemPersons !== selectedPersons) {
                        show = false;
                    }
                }
                
                if (selectedCpu && selectedCpu.trim() !== '') {
                    if (itemCpu !== selectedCpu) {
                        show = false;
                    }
                }
                
                if (selectedRam && selectedRam.trim() !== '') {
                    if (itemRam !== selectedRam) {
                        show = false;
                    }
                }
                
                if (selectedSsd && selectedSsd.trim() !== '') {
                    if (itemSsd !== selectedSsd) {
                        show = false;
                    }
                }
                
                if (show) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                } else {
                    item.classList.add('hidden');
                    item.style.display = 'none';
                }
            });
            
            // Скрываем пустые региональные блоки
            document.querySelectorAll('.vdi-region-block').forEach(function(block) {
                const allPlans = block.querySelectorAll('.vdi-plan-item');
                const visiblePlans = Array.from(allPlans).filter(function(plan) {
                    return !plan.classList.contains('hidden') && 
                           plan.style.display !== 'none' && 
                           plan.offsetParent !== null;
                });
                if (visiblePlans.length === 0) {
                    block.style.display = 'none';
                } else {
                    block.style.display = '';
                }
            });
            
            // Скрываем пустые секции (только если есть активные фильтры)
            const hasActiveFilters = selectedLocation || selectedPersons || selectedCpu || selectedRam || selectedSsd;
            if (hasActiveFilters) {
                document.querySelectorAll('section.container.my-5').forEach(function(section) {
                    const visibleBlocks = section.querySelectorAll('.vdi-region-block[style=""], .vdi-region-block:not([style*="display: none"])');
                    const hasVisibleBlocks = Array.from(visibleBlocks).some(function(block) {
                        return block.style.display !== 'none' && block.offsetParent !== null;
                    });
                    if (!hasVisibleBlocks && section.querySelector('.vdi-plan-item')) {
                        section.style.display = 'none';
                    } else {
                        section.style.display = '';
                    }
                });
            } else {
                // Если фильтры не активны, показываем все секции
                document.querySelectorAll('section.container.my-5').forEach(function(section) {
                    section.style.display = '';
                });
            }
        }
        
        // Добавляем обработчики событий для всех фильтров
        Object.values(filters).forEach(function(filter) {
            if (filter) {
                filter.addEventListener('change', applyFilters);
            }
        });
        
        // Обработчик для кнопки сброса
        if (resetButton) {
            resetButton.addEventListener('click', function() {
                // Сбрасываем все фильтры
                Object.values(filters).forEach(function(filter) {
                    if (filter) {
                        filter.value = '';
                    }
                });
                
                // Показываем все элементы явно
                planItems.forEach(function(item) {
                    item.classList.remove('hidden');
                    item.style.display = '';
                });
                
                // Показываем все региональные блоки
                document.querySelectorAll('.vdi-region-block').forEach(function(block) {
                    block.style.display = '';
                });
                
                // Показываем все секции
                document.querySelectorAll('section.container.my-5').forEach(function(section) {
                    section.style.display = '';
                });
            });
        }
        
        // НЕ применяем фильтры при загрузке страницы - показываем все товары по умолчанию
        // applyFilters();
    });
</script>

