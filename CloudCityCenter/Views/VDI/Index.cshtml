@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model CloudCityCenter.Models.ViewModels.VDIPageVm
@{
    ViewData["Title"] = Localizer["Title"];
}

<!-- HERO SECTION -->
<section class="vdi-page-hero py-5 position-relative">
  <div class="vdi-page-background"></div>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 order-2 order-md-1 animate-on-scroll" data-animation="fade-in-left">
        <div class="vdi-page-image-wrapper">
          <div class="vdi-icon-grid">
            <div class="vdi-icon-item">
              <div class="vdi-icon-circle">
                <i class="bi bi-display"></i>
              </div>
              <span>@Localizer["VirtualDesktop"]</span>
            </div>
            <div class="vdi-icon-item">
              <div class="vdi-icon-circle">
                <i class="bi bi-cloud"></i>
              </div>
              <span>@Localizer["CloudAccess"]</span>
            </div>
            <div class="vdi-icon-item">
              <div class="vdi-icon-circle">
                <i class="bi bi-shield-check"></i>
              </div>
              <span>@Localizer["Secure"]</span>
            </div>
            <div class="vdi-icon-item">
              <div class="vdi-icon-circle">
                <i class="bi bi-laptop"></i>
              </div>
              <span>@Localizer["MultiDevice"]</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 order-1 order-md-2 animate-on-scroll" data-animation="fade-in-right">
        <div class="section-badge mb-3">
          <span class="badge-text">@Localizer["VDI"]</span>
        </div>
        <h1 class="display-4 fw-bold mb-4 vdi-page-title">
          <span class="text-gradient-2">@Localizer["VDIHosting"]</span>
        </h1>
        <p class="vdi-page-text mb-4" style="font-size: 1.1rem; line-height: 1.8; color: #555;">
          @Localizer["VDIDescription"]
        </p>
        <div class="vdi-features mb-4">
          <div class="vdi-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["RemoteAccess"]</span>
          </div>
          <div class="vdi-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["ScalableResources"]</span>
          </div>
          <div class="vdi-feature-item">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            <span>@Localizer["ExpertSupport"]</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- VDI PLANS SECTION -->
<section class="container my-5">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
        <h2 class="display-5 fw-bold mb-3">@Localizer["VDIPlansForOnePerson"]</h2>
        <p class="lead text-muted">@Localizer["ChoosePlanForYourTasks"]</p>
    </div>

    @{
        string GetLocalizedRegionName(string regionName)
        {
            if (regionName.Contains("Netherlands", StringComparison.OrdinalIgnoreCase))
                return Localizer["RegionNetherlands"].Value;
            if (regionName.Contains("Germany") || regionName.Contains("France") || regionName.Contains("Poland"))
                return Localizer["RegionEurope"].Value;
            if (regionName.Contains("USA") || regionName.Contains("Canada") || regionName.Contains("Asia"))
                return Localizer["RegionUSAsia"].Value;
            return regionName;
        }

        string GetLocalizedPlanName(string planName)
        {
            if (planName.Contains("Start", StringComparison.OrdinalIgnoreCase))
                return Localizer["PlanStart"].Value;
            if (planName.Contains("Standard", StringComparison.OrdinalIgnoreCase))
                return Localizer["PlanStandard"].Value;
            if (planName.Contains("Pro", StringComparison.OrdinalIgnoreCase))
                return Localizer["PlanPro"].Value;
            return planName;
        }
    }

    @foreach (var region in Model.RegionsForOnePerson)
    {
        <div class="vdi-region-block mb-5 animate-on-scroll" data-animation="fade-in-up">
            <div class="vdi-region-header mb-4">
                <h3 class="h3 fw-bold text-center mb-3">@GetLocalizedRegionName(region.RegionName)</h3>
            </div>
            <div class="row g-4">
                @foreach (var plan in region.Plans)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 vdi-plan-card shadow-sm">
                            @if (!string.IsNullOrEmpty(plan.ImageUrl))
                            {
                                <img src="@plan.ImageUrl" class="card-img-top" alt="@GetLocalizedPlanName(plan.Name)" style="height: auto; max-height: 250px; width: 100%; object-fit: contain; padding: 1rem;" />
                            }
                            <div class="card-body d-flex flex-column">
                                <div class="text-center mb-3">
                                    <h4 class="card-title fw-bold mb-2">@GetLocalizedPlanName(plan.Name)</h4>
                                </div>
                                <ul class="list-unstyled flex-grow-1 mb-4">
                                    <li class="mb-3">
                                        <i class="bi bi-cpu text-primary me-2"></i>
                                        <strong>@Localizer["CPU"]:</strong> @plan.CpuCores @Localizer["Core"]
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-memory text-primary me-2"></i>
                                        <strong>@Localizer["RAM"]:</strong> @plan.RamGb @Localizer["GB"]
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-hdd-stack text-primary me-2"></i>
                                        <strong>@Localizer["SSD"]:</strong> @plan.SsdGb @Localizer["GB"]
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-speedometer2 text-primary me-2"></i>
                                        <strong>@Localizer["Traffic"]:</strong> @plan.Traffic
                                    </li>
                                    <li class="mb-3">
                                        <i class="bi bi-geo-alt text-primary me-2"></i>
                                        <strong>@Localizer["Country"]:</strong> @GetLocalizedRegionName(plan.Country)
                                    </li>
                                </ul>
                                <div class="mt-auto">
                                    <div class="text-center mb-3">
                                        <span class="display-6 fw-bold text-primary">$@plan.Price</span>
                                        <span class="text-muted">/ @Localizer["Month"]</span>
                                    </div>
                                    <button class="btn btn-primary w-100">@Localizer["Order"]</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- VDI PLANS FOR 3 PERSONS SECTION -->
    <section class="container my-5">
        <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
            <h2 class="display-5 fw-bold mb-3">@Localizer["VDIPlansForThreePersons"]</h2>
            <p class="lead text-muted">@Localizer["ChoosePlanForYourTasks"]</p>
        </div>

        @foreach (var region in Model.RegionsForThreePersons)
        {
            <div class="vdi-region-block mb-5 animate-on-scroll" data-animation="fade-in-up">
                <div class="vdi-region-header mb-4">
                    <h3 class="h3 fw-bold text-center mb-3">@GetLocalizedRegionName(region.RegionName)</h3>
                </div>
                <div class="row g-4">
                    @foreach (var plan in region.Plans)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card h-100 vdi-plan-card shadow-sm">
                                @if (!string.IsNullOrEmpty(plan.ImageUrl))
                                {
                                    <img src="@plan.ImageUrl" class="card-img-top" alt="@GetLocalizedPlanName(plan.Name)" style="height: auto; max-height: 250px; width: 100%; object-fit: contain; padding: 1rem;" />
                                }
                                <div class="card-body d-flex flex-column">
                                    <div class="text-center mb-3">
                                        <h4 class="card-title fw-bold mb-2">@GetLocalizedPlanName(plan.Name)</h4>
                                    </div>
                                    <ul class="list-unstyled flex-grow-1 mb-4">
                                        <li class="mb-3">
                                            <i class="bi bi-cpu text-primary me-2"></i>
                                            <strong>@Localizer["CPU"]:</strong> @plan.CpuCores @Localizer["Core"]
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-memory text-primary me-2"></i>
                                            <strong>@Localizer["RAM"]:</strong> @plan.RamGb @Localizer["GB"]
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-hdd-stack text-primary me-2"></i>
                                            <strong>@Localizer["SSD"]:</strong> @plan.SsdGb @Localizer["GB"]
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-speedometer2 text-primary me-2"></i>
                                            <strong>@Localizer["Traffic"]:</strong> @plan.Traffic
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-geo-alt text-primary me-2"></i>
                                            <strong>@Localizer["Country"]:</strong> @GetLocalizedRegionName(plan.Country)
                                        </li>
                                    </ul>
                                    <div class="mt-auto">
                                        <div class="text-center mb-3">
                                            <span class="display-6 fw-bold text-primary">$@plan.Price</span>
                                            <span class="text-muted">/ @Localizer["Month"]</span>
                                        </div>
                                        <button class="btn btn-primary w-100">@Localizer["Order"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </section>

<style>
    .vdi-region-block {
        margin-bottom: 4rem;
    }

    .vdi-region-header {
        border-bottom: 2px solid #0d6efd;
        padding-bottom: 1rem;
    }

    .vdi-plan-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
    }

    .vdi-plan-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.15) !important;
    }

    .vdi-plan-card .card-body {
        padding: 2rem;
    }

    .vdi-plan-card .card-title {
        color: #0d6efd;
        font-size: 1.5rem;
    }

    .vdi-plan-card ul li {
        padding: 0.5rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .vdi-plan-card ul li:last-child {
        border-bottom: none;
    }

    .vdi-plan-card .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .vdi-plan-card .btn-primary:hover {
        background-color: #0b5ed7;
        transform: scale(1.02);
    }
</style>

