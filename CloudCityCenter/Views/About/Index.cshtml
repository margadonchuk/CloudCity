<section id="contact" style="padding: 60px 5%; background-color: #f5f5f5; border-radius: 20px; max-width: 700px; margin: 0 auto;">
    <h2 style="text-align: center; font-size: 2.2rem; color: #222;">Contact Us</h2>

    <form asp-controller="Contact" asp-action="Submit" method="post">
        <div style="margin-bottom: 20px;">
            <label for="name" style="display: block; margin-bottom: 6px;">Name</label>
            <input type="text" id="name" name="Name" required style="width: 100%; padding: 10px; border-radius: 8px; border: 1px solid #ccc;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="email" style="display: block; margin-bottom: 6px;">Email</label>
            <input type="email" id="email" name="Email" required style="width: 100%; padding: 10px; border-radius: 8px; border: 1px solid #ccc;" />
        </div>

        <div style="margin-bottom: 20px;">
            <label for="message" style="display: block; margin-bottom: 6px;">Message</label>
            <textarea id="message" name="Message" rows="5" required style="width: 100%; padding: 10px; border-radius: 8px; border: 1px solid #ccc;"></textarea>
        </div>

        <button type="submit" style="background-color: #3B82F6; color: white; padding: 12px 24px; border: none; border-radius: 8px; font-weight: 600;">Send Message</button>
    </form>
</section>
