<style>
.carousel-container { overflow: hidden; max-width: 900px; margin: 0 auto; }
.carousel-track { display: flex; transition: transform 0.6s ease-in-out; }
.testimonial-slide { flex: 0 0 100%; display: flex; align-items: center; gap: 20px; box-sizing: border-box; padding: 20px; }
.testimonial-img { width: 70px; height: 70px; border-radius: 12px; object-fit: cover; flex-shrink: 0; }
