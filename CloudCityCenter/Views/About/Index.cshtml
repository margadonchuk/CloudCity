          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }
      
      <form asp-controller="About" asp-action="Submit" method="post" style="display: flex; flex-direction: column; gap: 15px;">
      @Html.AntiForgeryToken()
      <input type="text" name="Name" placeholder="@Localizer["YourName"]" required
             style="padding: 12px; border: 1px solid #ccc; border-radius: 6px;">
      <input type="email" name="Email" placeholder="@Localizer["YourEmail"]" required
             style="padding: 12px; border: 1px solid #ccc; border-radius: 6px;">
      <input type="text" name="Subject" placeholder="@Localizer["Subject"]"
             style="padding: 12px; border: 1px solid #ccc; border-radius: 6px;">
      <textarea name="Message" placeholder="@Localizer["YourMessage"]" rows="4" required
                style="padding: 12px; border: 1px solid #ccc; border-radius: 6px;"></textarea>
      <button type="submit" style="background-color: #0b1c49; color: #fff; padding: 12px; border: none; border-radius: 6px; cursor: pointer;">
        @Localizer["SendMessage"]
      </button>
      </form>
    </div>

  </div>
</section>


