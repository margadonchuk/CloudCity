@{
    ViewData["Title"] = "Contact";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE0Xtc0L9QGRvYslXj8WZ7bU9KcZsnYGTf5B4q7+BC6GJw8Rg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
            color: white;
        }

        .background {
            background: url('/images/contact.png') no-repeat center center/cover;
            height: 100vh;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .contact-title {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .divider {
            width: 300px;
            border-top: 2px solid white;
            margin: 1rem 0 2rem 0;
        }

        .contact-info {
            font-size: 1.1rem;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 12px;
            justify-content: center;
        }

        .contact-item i {
            font-size: 1.4rem;
        }

        .contact-item a {
            color: white;
            text-decoration: none;
        }

        .contact-item a:hover {
            text-decoration: underline;
        }

        .form-container {
            background: #fff;
            color: #333;
            padding: 30px;
            border-radius: 10px;
            margin: 40px auto;
            max-width: 800px;
            width: 90%;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            position: relative;
            z-index: 3;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container h2 {
            text-align: center;
            color: #444;
        }

        .form-container form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 20px;
        }

        .form-container textarea {
            grid-column: span 2;
            resize: vertical;
            height: 100px;
        }

        .form-container input,
        .form-container textarea {
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .form-container button {
            grid-column: span 2;
            padding: 12px;
            font-size: 18px;
            background-color: #3f82ff;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-container button:hover {
            background-color: #295fd9;
        }

        @@media (max-width: 768px) {
            .form-container form {
                grid-template-columns: 1fr;
            }

            .form-container textarea,
            .form-container button {
                grid-column: span 1;
            }
        }
    </style>
}

<div class="background">
    <div class="contact-title">Contact Us</div>
    <div class="divider"></div>
    <div class="contact-info">
        <div class="contact-item">
            <img src="/images/email.png" alt="Email icon" class="contact-icon">
            <a href="mailto:support@cloudcity.center">support@cloudcity.center</a>
        </div>

        <!-- Technical specialist -->
        <div class="contact-item">
            <img src="/images/telegram.png" alt="Tech icon" class="contact-icon">
            <a href="https://t.me/tech_spec_cloudcity" target="_blank">
                Write to our technical specialist
            </a>
        </div>

        <!-- Financial specialist -->
        <div class="contact-item">
            <img src="/images/telegram.png" alt="Finance icon" class="contact-icon">
            <a href="https://t.me/finance_cloudcity" target="_blank">
                Write to our financial specialist
            </a>
        </div>

        <!-- Main Telegram -->
        <div class="contact-item">
            <img src="/images/telegram.png" alt="Telegram icon" class="contact-icon">
            <a href="https://t.me/CloudCityCenter" target="_blank">
                Message us on Telegram
            </a>
        </div>

    </div>
</div>

<!-- CSS для иконок -->
<style>
    .contact-item {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }
    .contact-icon {
        width: 20px;
        height: 20px;
        margin-right: 8px;
    }
</style>
<div class="form-container">
  <h2>Fill out the form and we will contact you as soon as possible</h2>
  <form asp-action="Submit" method="post">
    @Html.AntiForgeryToken()
    <input type="text" name="Name" placeholder="Your Name" required>
    <input type="email" name="Email" placeholder="Your Email" required>
    <input type="tel" name="Phone" placeholder="Phone Number" required>
    <input type="text" name="ServiceType" placeholder="Service Type">
    <textarea name="Message" placeholder="Message"></textarea>
    <button type="submit">Send</button>
  </form>
</div>


