@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Contact Us - CloudCity Center</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      color: #fff;
      height: 100%;
    }

<style>
  .background {
    background: url('/images/contact.png') no-repeat center center/cover;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
  }
</style>




    .overlay {
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background-color: rgba(0,0,0,0.6);
      z-index: 1;
    }

    .content {
      z-index: 2;
    }

    .content h1 {
      font-size: 48px;
      margin-bottom: 20px;
    }

    .contact-links {
      font-size: 18px;
      line-height: 1.6;
    }

    .contact-links a {
      color: #fff;
      text-decoration: none;
      display: block;
    }

    .form-container {
      background: #fff;
      color: #333;
      padding: 30px;
      border-radius: 10px;
      margin: 40px auto;
      max-width: 800px;
      width: 90%;
      box-shadow: 0 0 20px rgba(0,0,0,0.2);
      position: relative;
      z-index: 3;
    }

    .form-container h2 {
      text-align: center;
      color: #444;
    }

    form {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-top: 20px;
    }

    form textarea {
      grid-column: span 2;
      resize: vertical;
      height: 100px;
    }

    input, textarea {
      padding: 12px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    button {
      grid-column: span 2;
      padding: 12px;
      font-size: 18px;
      background-color: #3f82ff;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #295fd9;
    }

    @@media (max-width: 768px) {
      form {
        grid-template-columns: 1fr;
      }

      form textarea, button {
        grid-column: span 1;
      }
    }
  </style>
</head>
<body>
  <div class="background">
    <div class="overlay"></div>
    <div class="content">
      <h1>Contact Us</h1>
      <div class="contact-links">
        <a href="mailto:support@cloudcity.center">üìß support@cloudcity.center</a>
        <a href="https://t.me/tech_specialist" target="_blank">üì® Write to our technical specialist</a>
        <a href="https://t.me/finance_specialist" target="_blank">‚úàÔ∏è Write to our financial specialist</a>
      </div>
    </div>
  </div>

  <div class="form-container">
    <h2>Fill out the form and we will contact you as soon as possible</h2>
    <form>
      <input type="text" placeholder="Your Name" required>
      <input type="email" placeholder="Your Email" required>
      <input type="tel" placeholder="Phone Number" required>
      <input type="text" placeholder="Service Type">
      <textarea placeholder="Message"></textarea>
      <button type="submit">Send</button>
    </form>
  </div>
</body>
</html>
