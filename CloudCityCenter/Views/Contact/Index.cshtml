@{
    ViewData["Title"] = Localizer["Title"];
}

<!-- CONTACT HERO SECTION -->
<section class="contact-hero-section py-5 position-relative">
  <div class="contact-hero-image"></div>
  <div class="contact-hero-overlay"></div>
  <div class="contact-hero-pattern"></div>
  <div class="contact-hero-particles"></div>
  <div class="container">
    <div class="text-center py-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="section-badge mb-4">
        <span class="badge-text">@Localizer["GetInTouch"]</span>
      </div>
      <h1 class="display-2 fw-bold mb-4 contact-hero-title">
        <span class="text-gradient-2">@Localizer["ContactUs"]</span>
      </h1>
      <p class="lead contact-hero-text" style="font-size: 1.3rem; color: rgba(255, 255, 255, 0.95); max-width: 800px; margin: 0 auto; line-height: 1.8;">
        @Localizer["ContactHeroText"]
      </p>
    </div>
  </div>
</section>

<!-- CONTACT METHODS SECTION -->
<section class="contact-methods-section py-5">
  <div class="container">
    <div class="row g-4">
      <!-- Email -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon email-icon">
            <i class="bi bi-envelope-fill"></i>
          </div>
          <h3 class="contact-method-title">@Localizer["Email"]</h3>
          <p class="contact-method-description">@Localizer["EmailDesc"]</p>
          <a href="mailto:support@cloudcity.center" class="contact-method-link">
            support@cloudcity.center
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Technical Specialist -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon telegram-icon">
            <i class="bi bi-telegram"></i>
          </div>
          <h3 class="contact-method-title">@Localizer["TechnicalSupport"]</h3>
          <p class="contact-method-description">@Localizer["TechnicalSupportDesc"]</p>
          <a href="https://t.me/tech_spec_cloudcity" target="_blank" class="contact-method-link">
            @Localizer["WriteToSpecialist"]
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Financial Specialist -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon finance-icon">
            <i class="bi bi-wallet2"></i>
          </div>
          <h3 class="contact-method-title">@Localizer["FinancialSupport"]</h3>
          <p class="contact-method-description">@Localizer["FinancialSupportDesc"]</p>
          <a href="https://t.me/finance_cloudcity" target="_blank" class="contact-method-link">
            @Localizer["ContactFinanceTeam"]
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Main Telegram -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon main-telegram-icon">
            <i class="bi bi-chat-dots-fill"></i>
          </div>
          <h3 class="contact-method-title">@Localizer["GeneralInquiries"]</h3>
          <p class="contact-method-description">@Localizer["GeneralInquiriesDesc"]</p>
          <a href="https://t.me/CloudCityCenter" target="_blank" class="contact-method-link">
            @Localizer["MessageOnTelegram"]
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CONTACT FORM SECTION -->
<section class="contact-form-section py-5 position-relative">
  <div class="contact-form-background"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="contact-form-card animate-on-scroll" data-animation="fade-in-up">
          <div class="text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">@Localizer["SendUsMessage"]</h2>
            <p class="text-muted">@Localizer["ContactFormDesc"]</p>
          </div>
          <form asp-action="Submit" method="post" class="contact-form">
            @Html.AntiForgeryToken()
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">@Localizer["YourName"] <span class="text-danger">*</span></label>
                <input type="text" name="Name" class="form-control contact-input" placeholder="@Localizer["YourName"]" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">@Localizer["YourEmail"] <span class="text-danger">*</span></label>
                <input type="email" name="Email" class="form-control contact-input" placeholder="@Localizer["YourEmail"]" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">@Localizer["PhoneNumber"] <span class="text-danger">*</span></label>
                <input type="tel" name="Phone" class="form-control contact-input" placeholder="@Localizer["PhoneNumber"]" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">@Localizer["ServiceType"]</label>
                <input type="text" name="ServiceType" class="form-control contact-input" placeholder="@Localizer["ServiceType"]">
              </div>
              <div class="col-12">
                <label class="form-label">@Localizer["Message"]</label>
                <textarea name="Message" class="form-control contact-textarea" rows="5" placeholder="@Localizer["Message"]"></textarea>
              </div>
              <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg contact-submit-btn">
                  <i class="bi bi-send-fill me-2"></i>@Localizer["SendMessage"]
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>


