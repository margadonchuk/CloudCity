@{
    ViewData["Title"] = "Contact";
}

<!-- CONTACT HERO SECTION -->
<section class="contact-hero-section py-5 position-relative">
  <div class="contact-hero-background"></div>
  <div class="container">
    <div class="text-center mb-5 animate-on-scroll" data-animation="fade-in-up">
      <div class="section-badge mb-3">
        <span class="badge-text">Get In Touch</span>
      </div>
      <h1 class="display-3 fw-bold mb-4 contact-hero-title">
        <span class="text-gradient-2">Contact</span> <span class="text-primary">Us</span>
      </h1>
      <p class="lead contact-hero-text" style="font-size: 1.2rem; color: #555; max-width: 700px; margin: 0 auto;">
        We're here to help! Reach out to us through any of the channels below. Our team is ready to assist you with any questions or support you may need.
      </p>
    </div>
  </div>
</section>

<!-- CONTACT METHODS SECTION -->
<section class="contact-methods-section py-5">
  <div class="container">
    <div class="row g-4">
      <!-- Email -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon email-icon">
            <i class="bi bi-envelope-fill"></i>
          </div>
          <h3 class="contact-method-title">Email</h3>
          <p class="contact-method-description">Send us an email anytime</p>
          <a href="mailto:support@cloudcity.center" class="contact-method-link">
            support@cloudcity.center
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Technical Specialist -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon telegram-icon">
            <i class="bi bi-telegram"></i>
          </div>
          <h3 class="contact-method-title">Technical Support</h3>
          <p class="contact-method-description">Get technical assistance</p>
          <a href="https://t.me/tech_spec_cloudcity" target="_blank" class="contact-method-link">
            Write to specialist
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Financial Specialist -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon finance-icon">
            <i class="bi bi-wallet2"></i>
          </div>
          <h3 class="contact-method-title">Financial Support</h3>
          <p class="contact-method-description">Billing and payment questions</p>
          <a href="https://t.me/finance_cloudcity" target="_blank" class="contact-method-link">
            Contact finance team
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>

      <!-- Main Telegram -->
      <div class="col-md-6 col-lg-3 animate-on-scroll" data-animation="fade-in-up">
        <div class="contact-method-card">
          <div class="contact-method-icon main-telegram-icon">
            <i class="bi bi-chat-dots-fill"></i>
          </div>
          <h3 class="contact-method-title">General Inquiries</h3>
          <p class="contact-method-description">General questions and support</p>
          <a href="https://t.me/CloudCityCenter" target="_blank" class="contact-method-link">
            Message on Telegram
            <i class="bi bi-arrow-right ms-2"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CONTACT FORM SECTION -->
<section class="contact-form-section py-5 position-relative">
  <div class="contact-form-background"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="contact-form-card animate-on-scroll" data-animation="fade-in-up">
          <div class="text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">Send Us a Message</h2>
            <p class="text-muted">Fill out the form below and we'll get back to you as soon as possible</p>
          </div>
          <form asp-action="Submit" method="post" class="contact-form">
            @Html.AntiForgeryToken()
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Your Name <span class="text-danger">*</span></label>
                <input type="text" name="Name" class="form-control contact-input" placeholder="John Doe" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Your Email <span class="text-danger">*</span></label>
                <input type="email" name="Email" class="form-control contact-input" placeholder="john@example.com" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Phone Number <span class="text-danger">*</span></label>
                <input type="tel" name="Phone" class="form-control contact-input" placeholder="+1 234 567 8900" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Service Type</label>
                <input type="text" name="ServiceType" class="form-control contact-input" placeholder="Server, VPS, VPN, etc.">
              </div>
              <div class="col-12">
                <label class="form-label">Message</label>
                <textarea name="Message" class="form-control contact-textarea" rows="5" placeholder="Tell us how we can help you..."></textarea>
              </div>
              <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg contact-submit-btn">
                  <i class="bi bi-send-fill me-2"></i>Send Message
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>


