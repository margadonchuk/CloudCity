@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CloudCityCenter.Areas.Admin.Controllers.CustomerViewModel>
@{
    ViewData["Title"] = "Клиенты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Клиенты</h1>

<div class="mb-3">
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-box me-2"></i>Товары
    </a>
    <a asp-area="Admin" asp-controller="Users" asp-action="NewUsers" class="btn btn-info">
        <i class="bi bi-people me-2"></i>Новые пользователи
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Количество заказов</th>
            <th>Всего потрачено</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.User.Email</td>
                <td>@customer.OrderCount</td>
                <td>$@customer.TotalSpent.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.User.Id" class="btn btn-sm btn-info">Детали</a>
                </td>
            </tr>
        }
    </tbody>
</table>

