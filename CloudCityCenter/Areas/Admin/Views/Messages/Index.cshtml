@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CloudCityCenter.Models.ContactMessage>

@{
    ViewData["Title"] = "Письма";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-envelope-fill me-2"></i>Письма
                @if (ViewBag.UnreadCount != null && ViewBag.UnreadCount > 0)
                {
                    <span class="badge bg-danger ms-2">@ViewBag.UnreadCount непрочитанных</span>
                }
            </h1>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Ошибка:</strong> @ViewBag.Error
                </div>
            }

            <!-- Навигация по админ-панели -->
            <div class="mb-3">
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-box me-2"></i>Товары
                </a>
                <a asp-area="Admin" asp-controller="Users" asp-action="NewUsers" class="btn btn-info">
                    <i class="bi bi-people me-2"></i>Новые пользователи
                </a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Customers" class="btn btn-success">
                    <i class="bi bi-person-check me-2"></i>Клиенты
                </a>
            </div>

            <!-- Фильтры -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Страница источника:</label>
                            <select name="sourcePage" class="form-select">
                                <option value="">Все страницы</option>
                                <option value="About" selected="@(ViewBag.SourcePage == "About")">About</option>
                                <option value="Contact" selected="@(ViewBag.SourcePage == "Contact")">Contact</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Статус:</label>
                            <select name="unreadOnly" class="form-select">
                                <option value="">Все письма</option>
                                <option value="true" selected="@(ViewBag.UnreadOnly == true)">Только непрочитанные</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-funnel me-1"></i>Применить фильтры
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Сбросить
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Таблица писем -->
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Имя</th>
                                        <th>Email</th>
                                        <th>IP Address</th>
                                        <th>Телефон</th>
                                        <th>Страница</th>
                                        <th>Тема</th>
                                        <th>Дата</th>
                                        <th>Статус</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model)
                                    {
                                        <tr class="@(!message.IsRead ? "table-warning" : "")">
                                            <td>@message.Id</td>
                                            <td><strong>@message.Name</strong></td>
                                            <td>
                                                <a href="mailto:@message.Email">@message.Email</a>
                                            </td>
                                            <td>@(message.IpAddress ?? "-")</td>
                                            <td>@(message.Phone ?? "-")</td>
                                            <td>
                                                <span class="badge bg-@(message.SourcePage == "About" ? "info" : "primary")">
                                                    @message.SourcePage
                                                </span>
                                            </td>
                                            <td>@(message.Subject ?? "-")</td>
                                            <td>@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (message.IsRead)
                                                {
                                                    <span class="badge bg-success">Прочитано</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Новое</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye me-1"></i>Просмотр
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@message.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash me-1"></i>Удалить
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>Писем не найдено.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
