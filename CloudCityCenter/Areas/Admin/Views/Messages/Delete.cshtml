@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CloudCityCenter.Models.ContactMessage

@{
    ViewData["Title"] = "Удаление письма";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-exclamation-triangle text-danger me-2"></i>Удаление письма
            </h1>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Внимание!</strong> Вы уверены, что хотите удалить это письмо? Это действие нельзя отменить.
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Письмо #@Model.Id</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Имя:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Страница:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.SourcePage == "About" ? "info" : "primary")">
                                @Model.SourcePage
                            </span>
                        </dd>

                        <dt class="col-sm-3">Дата:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Сообщение:</dt>
                        <dd class="col-sm-9">@(Model.Message.Length > 100 ? Model.Message.Substring(0, 100) + "..." : Model.Message)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Удалить
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

