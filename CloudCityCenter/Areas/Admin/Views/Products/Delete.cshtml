@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CloudCityCenter.Models.Product
@{
    ViewData["Title"] = "Удалить товар";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удалить товар</h1>

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type</dd>
        
        <dt class="col-sm-2">Цена/мес</dt>
        <dd class="col-sm-10">$@Model.PricePerMonth.ToString("F2")</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

