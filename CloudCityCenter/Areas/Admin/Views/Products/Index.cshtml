@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CloudCityCenter.Models.Product>
@{
    ViewData["Title"] = "Товары";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Управление товарами</h1>

<div class="mb-3">
    <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Создание товара
    </a>
    <a asp-area="Admin" asp-controller="Users" asp-action="NewUsers" class="btn btn-info">
        <i class="bi bi-people me-2"></i>Новые пользователи
    </a>
    <a asp-area="Admin" asp-controller="Users" asp-action="Customers" class="btn btn-success">
        <i class="bi bi-person-check me-2"></i>Клиенты
    </a>
    <a asp-area="Admin" asp-controller="Messages" asp-action="Index" class="btn btn-warning">
        <i class="bi bi-envelope-fill me-2"></i>Письма
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Тип</th>
            <th>Цена/мес</th>
            <th>Доступен</th>
            <th>Опубликован</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>$@item.PricePerMonth.ToString("F2")</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Да</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Нет</span>
                    }
                </td>
                <td>
                    @if (item.IsPublished)
                    {
                        <span class="badge bg-success">Да</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Нет</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

