@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CloudCityCenter.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<h1>Admin Panel</h1>

<div class="mb-4">
    <a asp-controller="Users" asp-action="NewUsers" class="btn btn-primary me-2">
        <i class="bi bi-person-plus me-1"></i>New Users
    </a>
    <a asp-controller="Users" asp-action="Customers" class="btn btn-success me-2">
        <i class="bi bi-people me-1"></i>Customers
    </a>
</div>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Location</th>
            <th>Price</th>
            <th>Available</th>
            <th>Published</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Type</td>
            <td>@item.Location</td>
            <td>$@item.PricePerMonth</td>
            <td>@(item.IsAvailable ? "Yes" : "No")</td>
            <td>@(item.IsPublished ? "Yes" : "No")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

