@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CloudCityCenter.Models.Product
@{
    ViewData["Title"] = "Редактировать товар";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать товар</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Slug" class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Type" class="form-label">Тип</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<CloudCityCenter.Models.ProductType>()" class="form-control"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Location" class="form-label">Локация</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="PricePerMonth" class="form-label">Цена/мес</label>
        <input asp-for="PricePerMonth" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PricePerMonth" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="Configuration" class="form-label">Конфигурация</label>
        <textarea asp-for="Configuration" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Configuration" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="form-label">URL изображения</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    
    <div class="form-check mb-3">
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <label asp-for="IsAvailable" class="form-check-label">Доступен</label>
    </div>
    
    <div class="form-check mb-3">
        <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
        <label asp-for="IsPublished" class="form-check-label">Опубликован</label>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

