@model CloudCityCenter.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_Layout";
}

<h1>Edit Product</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<CloudCityCenter.Models.ProductType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PricePerMonth" class="control-label"></label>
                <input asp-for="PricePerMonth" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PricePerMonth" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Configuration" class="control-label"></label>
                <textarea asp-for="Configuration" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Configuration" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailable" />
                <label class="form-check-label" asp-for="IsAvailable"></label>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsPublished" />
                <label class="form-check-label" asp-for="IsPublished"></label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

